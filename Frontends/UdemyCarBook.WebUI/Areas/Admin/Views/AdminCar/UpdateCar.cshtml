@model UpdateCarDto
@{
    ViewData["Title"] = "Araç Güncelleme";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>

    /* Minimal ve Profesyonel Stil */
    .page-header-card {
        background: white;
        border-radius: 15px;
        padding: 20px 25px;
        margin-bottom: 25px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        border-left: 5px solid #667eea;
    }

    /* BİLGİLENDİRME KARTI */
    .info-card {
        background: linear-gradient(135deg, #e8f4fc 0%, #d1ecf1 100%);
        border-left: 4px solid #3498db;
        padding: 15px 20px;
        margin: 20px 0;
        border-radius: 0 5px 5px 0;
        font-size: 15px;
        color: #2c3e50;
    }

    /* FORM STİLLERİ */
    .form-container {
        background: white;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 5px 30px rgba(0,0,0,0.08);
        margin-bottom: 30px;
    }

    .section-header {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-left: 4px solid #3498db;
        padding: 15px 20px;
        margin-bottom: 25px;
        border-radius: 0 8px 8px 0;
        font-weight: 600;
        color: #2c3e50;
        font-size: 1.1rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        margin-bottom: 8px;
        font-weight: 600;
        color: #2c3e50;
        font-size: 0.95rem;
    }

    .form-control, .form-select {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        font-size: 15px;
        transition: all 0.3s ease;
        background-color: white;
    }

        .form-control:focus, .form-select:focus {
            border-color: #3498db;
            box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
            outline: none;
        }

    /* DROPDOWN (SELECT) ÖZEL STİLLERİ - DÜZELTİLMİŞ */
    .form-select {
        /* Yazıların tam görünmesi için */
        white-space: normal !important;
        word-wrap: break-word !important;
        overflow: visible !important;
        height: auto !important;
        min-height: 46px !important;
        line-height: 1.5 !important;
        padding: 12px 15px !important;
        /* Ok simgesi */
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%23343a40' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M2 5l6 6 6-6'/%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right 0.75rem center;
        background-size: 16px 12px;
        padding-right: 2.5rem;
        /* Tarayıcı varsayılan stillerini override et */
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
    }

        /* Dropdown option'ları */
        .form-select option {
            white-space: normal !important;
            word-wrap: break-word !important;
            padding: 10px 15px !important;
            font-size: 15px !important;
            line-height: 1.5 !important;
            height: auto !important;
            background-color: white;
        }

    /* Dropdown açıkken */
    select:focus {
        overflow: visible !important;
    }

    /* Seçili option */
    .form-select option:checked {
        background-color: #f0f8ff !important;
        color: #2c3e50 !important;
        font-weight: 600;
    }

    /* Input group içindeki select'ler */
    .input-group .form-select {
        border-radius: 0 8px 8px 0;
        border-left: none;
    }

    .input-group {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
    }

        .input-group .form-group {
            flex: 1;
            min-width: 200px;
        }

    /* BUTON STİLLERİ */
    .button-container {
        display: flex;
        gap: 15px;
        margin-top: 30px;
        padding-top: 25px;
        border-top: 1px solid #e9ecef;
    }

    .btn {
        padding: 12px 24px;
        border: none;
        border-radius: 8px;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
    }

    .btn-success {
        background: linear-gradient(135deg, #42e695 0%, #3bb2b8 100%);
        color: white;
    }

        .btn-success:hover {
            background: linear-gradient(135deg, #38d689 0%, #35a4aa 100%);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(66, 230, 149, 0.3);
        }

    .btn-danger {
        background: linear-gradient(135deg, #ff6b6b 0%, #ffa8a8 100%);
        color: white;
    }

        .btn-danger:hover {
            background: linear-gradient(135deg, #ff5252 0%, #ff8e8e 100%);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(255, 107, 107, 0.3);
        }

    /* ARAÇ GÖRSELLERİ BÖLÜMÜ */
    .image-preview-container {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
        margin-top: 15px;
    }

    .image-preview {
        flex: 1;
        min-width: 250px;
    }

    .image-preview-box {
        border: 2px dashed #dee2e6;
        border-radius: 10px;
        padding: 15px;
        text-align: center;
        background: #f8f9fa;
        min-height: 150px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        transition: all 0.3s ease;
    }

        .image-preview-box:hover {
            border-color: #3498db;
            background: #f1f8ff;
        }

    .preview-image {
        max-width: 100%;
        max-height: 200px;
        border-radius: 8px;
        margin-bottom: 10px;
        display: none;
    }

    .image-label {
        font-size: 0.9rem;
        color: #6c757d;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .no-image {
        color: #adb5bd;
        font-size: 0.9rem;
    }

    /* ID BADGE */
    .id-badge {
        display: inline-block;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        margin-left: 10px;
    }

    /* FORM GRID DÜZENİ */
    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        /* margin-bottom: 30px; */
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .input-group {
            flex-direction: column;
        }

            .input-group .form-group {
                min-width: 100%;
            }

        .button-container {
            flex-direction: column;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }

        .image-preview-container {
            flex-direction: column;
        }

        .form-grid {
            grid-template-columns: 1fr;
        }

        .form-select {
            font-size: 14px;
            padding: 10px 12px !important;
        }
    }

    /* Geçersiz input'lar için */
    .is-invalid {
        border-color: #dc3545 !important;
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 12 12' width='12' height='12' fill='none' stroke='%23dc3545'%3e%3ccircle cx='6' cy='6' r='4.5'/%3e%3cpath stroke-linejoin='round' d='M5.8 3.6h.4L6 6.5z'/%3e%3ccircle cx='6' cy='8.2' r='.6' fill='%23dc3545' stroke='none'/%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right calc(.375em + .1875rem) center;
        background-size: calc(.75em + .375rem) calc(.75em + .375rem);
    }

        .is-invalid:focus {
            box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25) !important;
        }

    /* Form group içindeki label'lar için */
    .form-group small {
        display: block;
        margin-top: 5px;
        font-size: 12px;
        color: #6c757d;
    }

    /* Input group text için */
    .input-group-text {
        background-color: #f8f9fa;
        border: 1px solid #e0e0e0;
        color: #495057;
        font-size: 14px;
        padding: 12px 15px;
        transition: all 0.3s ease;
    }

    /* Safari için özel dropdown düzeltmesi */
    @@media not all and (min-resolution:.001dpcm) {
        @@supports (-webkit-appearance:none) {
            .form-select

    {
        padding-right: 30px !important;
    }

    }
    }

    /* Koltuk - Bagaj - Puan yan yana özel düzen */
    .triple-input {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 15px;
    }

    @@media (max-width: 768px) {
        .triple-input

    {
        grid-template-columns: 1fr;
    }

    }
    /* Sağ tarafta Koltuk - Bagaj - Puan için */
    .triple-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 12px;
    }

    @@media (max-width: 992px) {
        .triple-grid

    {
        grid-template-columns: 1fr;
    }

    }
</style>

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <!-- Başlık Kartı -->
                <div class="page-header-card">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h4 class="card-title font-size-18 mb-1">
                                <i class="fas fa-edit text-primary me-2"></i>Araç Bilgisi Güncelleme
                            </h4>                         
                        </div>
                        
                    </div>
                </div>

                <!-- Bilgilendirme Kartı -->
                <div class="info-card">
                    <i class="fas fa-info-circle me-2"></i>
                    Sistemde var olan araç bilgilerini güncellerken ilgili alanları eksiksiz doldurmanız önemlidir.
                    Veri girişlerinden sonra "Aracı Kaydet" butonuna tıklayarak güncelleme işlemini tamamlayabilirsiniz.
                </div>

                <form method="post">
                    <input type="hidden" asp-for="CarID" />

                    <!-- Form Container -->
                    <div class="form-container">

                        <!-- Teknik Özellikler -->                       

                        <div class="form-grid">
                            <div class="form-group">
                                <label class="form-label">Marka</label>
                                <div class="input-group">
                                    <span class="input-group-text" style="background: #f8f9fa; border: 1px solid #e0e0e0; border-right: none; border-radius: 8px 0 0 8px; padding: 12px 15px;">
                                        <i class="fas fa-tag text-primary"></i>
                                    </span>
                                    @Html.DropDownListFor(x => x.BrandID, (List<SelectListItem>)ViewBag.BrandValues,
                                    new { @class = "form-control form-select", @style = "border-radius: 0 8px 8px 0;" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label">Model</label>
                                <div class="input-group">
                                    <span class="input-group-text" style="background: #f8f9fa; border: 1px solid #e0e0e0; border-right: none; border-radius: 8px 0 0 8px; padding: 12px 15px;">
                                        <i class="fas fa-car text-primary"></i>
                                    </span>
                                    <input type="text" class="form-control" asp-for="@Model.Model" placeholder="Araç modelini giriniz">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label">Yıl</label>
                                <div class="input-group">
                                    <span class="input-group-text" style="background: #f8f9fa; border: 1px solid #e0e0e0; border-right: none; border-radius: 8px 0 0 8px; padding: 12px 15px;">
                                        <i class="fas fa-calendar-alt text-primary"></i>
                                    </span>
                                    <input type="text" class="form-control" asp-for="@Model.Year" placeholder="Örn: 2023">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label">KM</label>
                                <div class="input-group">
                                    <span class="input-group-text" style="background: #f8f9fa; border: 1px solid #e0e0e0; border-right: none; border-radius: 8px 0 0 8px; padding: 12px 15px;">
                                        <i class="fas fa-tachometer-alt text-primary"></i>
                                    </span>
                                    <input type="text" class="form-control" asp-for="@Model.Km" placeholder="Örn: 45000">
                                    <span class="input-group-text" style="background: #f8f9fa; border: 1px solid #e0e0e0; border-left: none; border-radius: 0 8px 8px 0; padding: 12px 15px;">
                                        KM
                                    </span>
                                </div>
                            </div>
                        </div>

                        <!-- Teknik Özellikler -->


                        <div class="form-grid">

                            <!-- Vites -->
                            <div class="form-group">
                                <label class="form-label">Vites</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-cogs text-primary"></i>
                                    </span>
                                    @Html.DropDownListFor(x => x.VitesID,
                                                                        (List<SelectListItem>)ViewBag.VitesValues,
                                                                        new { @class = "form-control form-select" })
                                </div>
                            </div>

                            <!-- Yakıt Türü -->
                            <div class="form-group">
                                <label class="form-label">Yakıt Türü</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-gas-pump text-primary"></i>
                                    </span>
                                    @Html.DropDownListFor(x => x.YakitTuruID,
                                                                        (List<SelectListItem>)ViewBag.YakitTuruValues,
                                                                        new { @class = "form-control form-select" })
                                </div>
                            </div>

                            <!-- Koltuk / Bagaj / Puan -->
                            <div class="form-group" style="grid-column: span 2;">
                                <div class="triple-grid">

                                    <!-- Koltuk -->
                                    <div class="form-group">
                                        <label class="form-label">Koltuk Sayısı</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="fas fa-user-friends text-primary"></i>
                                            </span>
                                            <input type="number" class="form-control" asp-for="@Model.Seat">
                                            <span class="input-group-text">kişi</span>
                                        </div>
                                    </div>

                                    <!-- Bagaj -->
                                    <div class="form-group">
                                        <label class="form-label">Bagaj Sayısı</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="fas fa-suitcase text-primary"></i>
                                            </span>
                                            <input type="number" class="form-control" asp-for="@Model.Luggage">
                                            <span class="input-group-text">adet</span>
                                        </div>
                                    </div>

                                    <!-- Puan -->
                                    <div class="form-group">
                                        <label class="form-label">Araç Puanı</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="fas fa-star text-warning"></i>
                                            </span>
                                            <input type="text" class="form-control" asp-for="@Model.CarScore">
                                            <span class="input-group-text">/ 5</span>
                                        </div>
                                    </div>

                                </div>
                            </div>

                        </div>


                        
                        <!-- Görsel Ayarları -->                     

                        <div class="form-grid">
                            <div class="form-group">
                                <label class="form-label">Kapak Fotoğrafı URL</label>
                                <div class="input-group">
                                    <span class="input-group-text" style="background: #f8f9fa; border: 1px solid #e0e0e0; border-right: none; border-radius: 8px 0 0 8px; padding: 12px 15px;">
                                        <i class="fas fa-image text-primary"></i>
                                    </span>
                                    <input type="text" class="form-control" asp-for="@Model.CoverImageUrl"
                                           placeholder="https://example.com/resim.jpg" id="coverImageUrl">
                                </div>
                               
                            </div>

                            <div class="form-group">
                                <label class="form-label">Büyük Resim URL</label>
                                <div class="input-group">
                                    <span class="input-group-text" style="background: #f8f9fa; border: 1px solid #e0e0e0; border-right: none; border-radius: 8px 0 0 8px; padding: 12px 15px;">
                                        <i class="fas fa-image text-primary"></i>
                                    </span>
                                    <input type="text" class="form-control" asp-for="@Model.BigImageUrl"
                                           placeholder="https://example.com/buyuk-resim.jpg" id="bigImageUrl">
                                </div>                                
                            </div>
                        </div>

                        <!-- Görsel Önizleme -->
                        <div class="image-preview-container">
                            <div class="image-preview">
                                <div class="image-label">Kapak Fotoğrafı Önizleme</div>
                                <div class="image-preview-box" id="coverPreviewBox">
                                    <img src="@Model.CoverImageUrl" class="preview-image" id="coverPreview"
                                         onerror="this.style.display='none'; document.getElementById('coverNoImage').style.display='block';"
                                         onload="this.style.display='block'; document.getElementById('coverNoImage').style.display='none';">
                                    <div class="no-image" id="coverNoImage">
                                        <i class="fas fa-image fa-2x mb-2"></i><br>
                                        Kapak fotoğrafı yüklenmedi
                                    </div>
                                </div>
                            </div>

                            <div class="image-preview">
                                <div class="image-label">Büyük Resim Önizleme</div>
                                <div class="image-preview-box" id="bigPreviewBox">
                                    <img src="@Model.BigImageUrl" class="preview-image" id="bigPreview"
                                         onerror="this.style.display='none'; document.getElementById('bigNoImage').style.display='block';"
                                         onload="this.style.display='block'; document.getElementById('bigNoImage').style.display='none';">
                                    <div class="no-image" id="bigNoImage">
                                        <i class="fas fa-image fa-2x mb-2"></i><br>
                                        Büyük resim yüklenmedi
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Butonlar -->
                        <div class="button-container">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-2"></i>Aracı Güncelle
                            </button>
                            <a href="/Admin/AdminCar" class="btn btn-danger">
                                <i class="fas fa-arrow-left me-2"></i>Araç Listesine Dön
                            </a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

<!-- Font Awesome ikonları -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<script>
    $(document).ready(function() {
        // Görsel URL'leri değiştiğinde önizleme güncelle
        $('#coverImageUrl').on('input', function() {
            var url = $(this).val();
            if (url && isValidUrl(url)) {
                $('#coverPreview').attr('src', url).css('display', 'block');
                $('#coverNoImage').hide();
            } else {
                $('#coverPreview').hide();
                $('#coverNoImage').show();
            }
        });

        $('#bigImageUrl').on('input', function() {
            var url = $(this).val();
            if (url && isValidUrl(url)) {
                $('#bigPreview').attr('src', url).css('display', 'block');
                $('#bigNoImage').hide();
            } else {
                $('#bigPreview').hide();
                $('#bigNoImage').show();
            }
        });

        // URL doğrulama fonksiyonu
        function isValidUrl(string) {
            try {
                new URL(string);
                return true;
            } catch (_) {
                return false;
            }
        }

        // Form submit öncesi validasyon
        $('form').on('submit', function(e) {
            var isValid = true;
            var errorMessage = '';

            // Model kontrolü
            if (!$('#Model').val().trim()) {
                isValid = false;
                errorMessage += '• Araç modeli gereklidir\n';
                $('#Model').addClass('is-invalid');
            } else {
                $('#Model').removeClass('is-invalid');
            }

            // Yıl kontrolü
            var year = $('#Year').val();
            if (!year || isNaN(year) || year < 1900 || year > new Date().getFullYear() + 1) {
                isValid = false;
                errorMessage += '• Geçerli bir yıl giriniz (1900-' + (new Date().getFullYear() + 1) + ')\n';
                $('#Year').addClass('is-invalid');
            } else {
                $('#Year').removeClass('is-invalid');
            }

            // KM kontrolü
            var km = $('#Km').val();
            if (!km || isNaN(km) || km < 0) {
                isValid = false;
                errorMessage += '• Geçerli bir KM değeri giriniz\n';
                $('#Km').addClass('is-invalid');
            } else {
                $('#Km').removeClass('is-invalid');
            }

            if (!isValid) {
                e.preventDefault();
                alert('Lütfen aşağıdaki hataları düzeltin:\n\n' + errorMessage);
                return false;
            }

            return true;
        });

        // İlk yüklemede önizlemeleri kontrol et
        if ($('#coverImageUrl').val()) {
            $('#coverImageUrl').trigger('input');
        }
        if ($('#bigImageUrl').val()) {
            $('#bigImageUrl').trigger('input');
        }

        // Select kutularını güzelleştir
        $('.form-select').each(function() {
            $(this).css({
                'appearance': 'none',
                '-webkit-appearance': 'none',
                '-moz-appearance': 'none'
            });
        });

        // Dropdown'ların içeriğini düzgün göstermek için
        function adjustDropdowns() {
            $('.form-select').each(function() {
                var $select = $(this);

                // Seçili option'ın metnini al
                var selectedText = $select.find('option:selected').text();

                // Eğer metin çok uzunsa
                if (selectedText.length > 30) {
                    // Tooltip ekle
                    $select.attr('title', selectedText);

                    // Kısa versiyonu göster
                    var shortText = selectedText.substring(0, 27) + '...';
                    $select.find('option:selected').text(shortText);
                }
            });
        }

        // Sayfa yüklendiğinde çalıştır
        adjustDropdowns();

        // Dropdown değiştiğinde
        $('.form-select').on('change', function() {
            // Yazı rengini siyah yap (bazı tarayıcılarda gri oluyor)
            $(this).css('color', '#2c3e50');
        });

        // Input group içindeki select'ler için ek düzenleme
        $('.input-group .form-select').css({
            'flex': '1',
            'min-width': '0'
        });

    });
</script>