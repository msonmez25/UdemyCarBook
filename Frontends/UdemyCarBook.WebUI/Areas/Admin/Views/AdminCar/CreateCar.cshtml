@model CreateCarDto
@{
    ViewData["Title"] = "Yeni Araç Girişi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    .page-header-card {
        background: white;
        border-radius: 15px;
        padding: 20px 25px;
        margin-bottom: 25px;
        box-shadow: 0 5px 20px rgba(0,0,0,.05);
        border-left: 5px solid #667eea
    }

    .info-card {
        background: linear-gradient(135deg,#e8f4fc 0%,#d1ecf1 100%);
        border-left: 4px solid #3498db;
        padding: 15px 20px;
        margin: 20px 0;
        border-radius: 0 5px 5px 0;
        color: #2c3e50
    }

    .form-container {
        background: white;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 5px 30px rgba(0,0,0,.08)
    }

    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit,minmax(300px,1fr));
        gap: 20px
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 8px;
        display: block
    }

    .form-control, .form-select {
        padding: 12px 15px;
        border-radius: 8px;
        border: 1px solid #e0e0e0 ;
    }

    .image-preview-container {
        display: flex;
        gap: 20px;
        margin-top: 20px
    }

    .image-preview-box {
        flex: 1;
        border: 2px dashed #dee2e6;
        border-radius: 10px;
        padding: 15px;
        background: #f8f9fa;
        text-align: center;
        min-height: 160px;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column
    }

    .preview-image {
        max-width: 100%;
        max-height: 200px;
        display: none;
        border-radius: 8px
    }

    .no-image {
        color: #adb5bd
    }

    .button-container {
        display: flex;
        gap: 15px;
        margin-top: 30px;
        border-top: 1px solid #eee;
        padding-top: 25px
    }

    .is-invalid {
        border-color: #dc3545 !important;
        box-shadow: 0 0 0 .2rem rgba(220,53,69,.25)
    }
    
    /* === DROPDOWN TAM GENİŞLİK KESİN ÇÖZÜM === */
    .form-grid > div {
        width: 100%;
    }

    .form-select {
        width: 100% !important;
        display: block !important;
    }

    .form-group,
    .form-group > div {
        width: 100%;
    }

    /* input-group KULLANILDIYSA */
    .input-group {
        width: 100%;
    }

        .input-group .form-select {
            flex: 1 1 100%;
        }

    /* === BUTON STİLLERİ (UPDATE SAYFASI İLE AYNI) === */
    .button-container {
        display: flex;
        gap: 15px;
        margin-top: 30px;
        padding-top: 25px;
        border-top: 1px solid #e9ecef;
        flex-wrap: wrap;
    }

        .button-container .btn {
            padding: 12px 24px;
            border-radius: 8px;
            font-size: 15px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        /* Kaydet */
        .button-container .btn-success {
            background: linear-gradient(135deg, #42e695 0%, #3bb2b8 100%);
            color: #fff;
            border: none;
        }

            .button-container .btn-success:hover {
                background: linear-gradient(135deg, #38d689 0%, #35a4aa 100%);
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(66, 230, 149, 0.3);
            }

        /* Listeye Dön */
        .button-container .btn-danger {
            background: linear-gradient(135deg, #ff6b6b 0%, #ffa8a8 100%);
            color: #fff;
            border: none;
        }

            .button-container .btn-danger:hover {
                background: linear-gradient(135deg, #ff5252 0%, #ff8e8e 100%);
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(255, 107, 107, 0.3);
            }

    /* Mobil uyum */
    @@media (max-width: 768px) {
        .button-container

    {
        flex-direction: column;
    }

    .button-container .btn {
        width: 100%;
        justify-content: center;
    }

    }
</style>

<div class="page-content">
    <div class="container-fluid">

        <div class="page-header-card">
            <h4><i class="fas fa-plus-circle text-primary me-2"></i>Yeni Araç Ekle</h4>
            <p class="text-muted mb-0">Sisteme yeni araç kaydı oluşturabilirsiniz.</p>
        </div>

        <div class="info-card">
            <i class="fas fa-info-circle me-2"></i>
            Tüm alanlar zorunludur.
        </div>

        <form method="post" id="carForm">

            <div class="form-container">

                <div class="form-grid">
                    <div>
                        <label class="form-label">Marka</label>
                        @Html.DropDownListFor(
                        x => x.BrandID,
                                                (List<SelectListItem>)ViewBag.BrandValues,
                                                new { @class = "form-select w-100" }
                                                )

                    </div>

                    <div>
                        <label class="form-label">Model</label>
                        <input asp-for="Model" class="form-control" id="Model" />
                    </div>

                    <div>
                        <label class="form-label">Yıl</label>
                        <input asp-for="Year" class="form-control" id="Year" />
                    </div>

                    <div>
                        <label class="form-label">KM</label>
                        <input asp-for="Km" class="form-control" id="Km" />
                    </div>
                </div>

                <div class="form-grid mt-3">
                    <div>
                        <label class="form-label">Vites</label>
                        @Html.DropDownListFor(x => x.VitesID,
                                                (List<SelectListItem>)ViewBag.VitesValues,
                                                new { @class = "form-select w-100" })
                    </div>

                    <div>
                        <label class="form-label">Yakıt Türü</label>
                        @Html.DropDownListFor(x => x.YakitTuruID,
                                                (List<SelectListItem>)ViewBag.YakitTuruValues,
                                                new { @class = "form-select w-100" })
                    </div>

                    <div>
                        <label class="form-label">Koltuk</label>
                        <input asp-for="Seat" class="form-control" id="Seat" />
                    </div>

                    <div>
                        <label class="form-label">Bagaj</label>
                        <input asp-for="Luggage" class="form-control" id="Luggage" />
                    </div>
                </div>

                <div class="form-grid mt-3">
                    <div>
                        <label class="form-label">Kapak Fotoğrafı URL</label>
                        <input asp-for="CoverImageUrl" class="form-control" id="coverImageUrl" />
                    </div>

                    <div>
                        <label class="form-label">Büyük Resim URL</label>
                        <input asp-for="BigImageUrl" class="form-control" id="bigImageUrl" />
                    </div>
                </div>

                <div class="image-preview-container">
                    <div class="image-preview-box">
                        <img id="coverPreview" class="preview-image" />
                        <div id="coverNoImage" class="no-image">Kapak Önizleme</div>
                    </div>

                    <div class="image-preview-box">
                        <img id="bigPreview" class="preview-image" />
                        <div id="bigNoImage" class="no-image">Büyük Resim Önizleme</div>
                    </div>
                </div>

                <div class="button-container">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Kaydet
                    </button>
                    <a href="/Admin/AdminCar" class="btn btn-danger">
                        <i class="fas fa-arrow-left"></i> Listeye Dön
                    </a>
                </div>

            </div>
        </form>

    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(function () {

        function imagePreview(input, img, noImg) {
            $(input).on('input', function () {
                const url = $(this).val().trim();

                if (!url) {
                    $(img).hide();
                    $(noImg).show();
                    return;
                }

                const i = new Image();
                i.onload = function () {
                    $(img).attr('src', url).fadeIn(200);
                    $(noImg).hide();
                };
                i.onerror = function () {
                    $(img).hide();
                    $(noImg).show();
                };
                i.src = url;
            });
        }

        imagePreview('#coverImageUrl', '#coverPreview', '#coverNoImage');
        imagePreview('#bigImageUrl', '#bigPreview', '#bigNoImage');

        $('#carForm').on('submit', function (e) {
            let valid = true;

            $('#carForm input, #carForm select').each(function () {
                if (!$(this).val()) {
                    $(this).addClass('is-invalid');
                    valid = false;
                } else {
                    $(this).removeClass('is-invalid');
                }
            });

            if (!valid) {
                e.preventDefault();
                alert('Lütfen tüm alanları doldurun.');
            }
        });

    });
</script>
