@model UpdateReservationDto
@{
    ViewData["Title"] = "UpdateReservation";
    Layout = "~/Views/AdminLayout/Index.cshtml";

    // Rezervasyon süresi hesaplaması
    var startDate = Model.StartDate;
    var endDate = Model.EndDate;
    var duration = endDate - startDate;
    var days = duration.Days;
    var hours = duration.Hours;

    // Durum rengi belirleme
    var statusClass = "";
    switch (Model.Status)
    {
        case "Rezervasyon Alındı":
            statusClass = "bg-warning text-dark";
            break;
        case "Onaylandı":
            statusClass = "bg-success";
            break;
        case "İptal Edildi":
            statusClass = "bg-danger";
            break;
        default:
            statusClass = "bg-secondary";
            break;
    }
}

<style>
    /* Özel stiller - Scroll'u engellemek için */
    .page-content {
        min-height: calc(100vh - 60px);
        overflow: visible !important;
    }

    .container-fluid, .row, .col-12, .card, .card-body {
        overflow: visible !important;
    }

    .card-body {
        padding-bottom: 1.5rem !important;
    }

    .section-header {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-left: 4px solid #3498db;
    }

    .form-control:focus, .form-select:focus {
        border-color: #3498db;
        box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
    }

    .input-group-text {
        background-color: #f8f9fa;
        border-color: #dee2e6;
        min-width: 45px;
        justify-content: center;
    }

    .badge {
        font-size: 0.85em;
        padding: 0.5em 1em;
    }

    .info-card {
        height: 100%;
        transition: transform 0.2s;
    }

        .info-card:hover {
            transform: translateY(-2px);
        }

    /* Buton grupları için düzenleme */
    .button-section {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 1.5rem;
        margin-top: 1rem;
        border: 1px solid #e9ecef;
    }

    .button-group-left {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        justify-content: flex-start;
    }

    .button-group-right {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        justify-content: flex-end;
    }

    /* Grid düzeni için ayarlar */
    .compact-grid {
        margin-bottom: 0;
    }

        .compact-grid .col-md-6 {
            margin-bottom: 1rem;
        }

    /* Responsive düzenlemeler */
    @@media (max-width: 768px) {
        .button-group-left, .button-group-right {
            justify-content: center !important;
        }

        .button-group-right {
            margin-top: 1rem;
        }
    }

    .card{
        margin-bottom:0 !important;
    }
    i{
        padding-right: 5px !important;
    }
        </style>

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body p-4">
                        <!-- Başlık ve Durum -->
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div>
                                <h4 class="card-title font-size-18 mb-1">
                                    <i class="fas fa-edit me-2 text-primary"></i>Rezervasyon Güncelleme
                                </h4>
                                <p class="card-subtitle mb-0 text-muted">
                                    ID: <span class="fw-bold">@Model.ReservationID</span> |
                                    <span class="badge @statusClass ms-2">@Model.Status</span>
                                </p>
                            </div>
                            <div class="text-end">
                                <div class="text-muted small">Rezervasyon Süresi</div>
                                <div class="fw-bold h5 mb-0">@days gün @hours saat</div>
                            </div>
                        </div>

                        <!-- Bilgi Kartları - Üst Kısım -->
                        <div class="row mb-4">
                            <div class="col-md-3 col-6 mb-3">
                                <div class="card info-card border-start border-primary border-3">
                                    <div class="card-body p-3">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h6 class="text-muted mb-0">Müşteri</h6>
                                                <h5 class="mb-0">@Model.Name @Model.Surname</h5>
                                            </div>
                                            <div class="align-self-center">
                                                <i class="fas fa-user text-primary fa-2x"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3 col-6 mb-3">
                                <div class="card info-card border-start border-success border-3">
                                    <div class="card-body p-3">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h6 class="text-muted mb-0">İletişim</h6>
                                                <h6 class="mb-0">@Model.Phone</h6>
                                            </div>
                                            <div class="align-self-center">
                                                <i class="fas fa-phone text-success fa-2x"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3 col-6 mb-3">
                                <div class="card info-card border-start border-warning border-3">
                                    <div class="card-body p-3">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h6 class="text-muted mb-0">Başlangıç</h6>
                                                <h6 class="mb-0">@startDate.ToString("dd.MM.yyyy HH:mm")</h6>
                                            </div>
                                            <div class="align-self-center">
                                                <i class="fas fa-calendar-plus text-warning fa-2x"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3 col-6 mb-3">
                                <div class="card info-card border-start border-info border-3">
                                    <div class="card-body p-3">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h6 class="text-muted mb-0">Bitiş</h6>
                                                <h6 class="mb-0">@endDate.ToString("dd.MM.yyyy HH:mm")</h6>
                                            </div>
                                            <div class="align-self-center">
                                                <i class="fas fa-calendar-minus text-info fa-2x"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <form method="post">
                            <input type="hidden" asp-for="ReservationID" />

                            <!-- Müşteri Bilgileri ve Rezervasyon Detayları Yan Yana -->
                            <div class="row compact-grid">
                                <!-- Sol Kolon: Müşteri Bilgileri -->
                                <div class="col-lg-6">
                                    <div class="section-header p-3 rounded mb-3">
                                        <h5 class="mb-0"><i class="fas fa-user-circle me-2"></i>Müşteri Bilgileri</h5>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label fw-bold">Ad</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                                <input type="text" class="form-control" asp-for="@Model.Name">
                                            </div>
                                        </div>

                                        <div class="col-md-6 mb-3">
                                            <label class="form-label fw-bold">Soyad</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                                <input type="text" class="form-control" asp-for="@Model.Surname">
                                            </div>
                                        </div>

                                        <div class="col-md-6 mb-3">
                                            <label class="form-label fw-bold">Yaş</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fas fa-birthday-cake"></i></span>
                                                <input type="number" class="form-control" asp-for="@Model.Age" min="18" max="100">
                                            </div>
                                        </div>

                                        <div class="col-md-6 mb-3">
                                            <label class="form-label fw-bold">Ehliyet Yılı</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                                                <input type="number" class="form-control" asp-for="@Model.DriverLicenseYear" min="0" max="60">
                                            </div>
                                        </div>

                                        <div class="col-md-6 mb-3">
                                            <label class="form-label fw-bold">E-posta</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                                <input type="email" class="form-control" asp-for="@Model.Email">
                                            </div>
                                        </div>

                                        <div class="col-md-6 mb-3">
                                            <label class="form-label fw-bold">Telefon</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                                <input type="text" class="form-control" asp-for="@Model.Phone">
                                            </div>
                                        </div>

                                        <div class="col-12 mb-3">
                                            <label class="form-label fw-bold">Ek Açıklamalar</label>
                                            <textarea cols="30" rows="2" class="form-control" asp-for="@Model.Description"></textarea>
                                        </div>
                                    </div>
                                </div>

                                <!-- Sağ Kolon: Rezervasyon Detayları -->
                                <div class="col-lg-6">
                                    <div class="section-header p-3 rounded mb-3">
                                        <h5 class="mb-0"><i class="fas fa-calendar-check me-2"></i>Rezervasyon Detayları</h5>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label fw-bold">Başlangıç Tarihi</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fas fa-play-circle"></i></span>
                                                <input type="datetime-local" class="form-control" asp-for="StartDate"
                                                       min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" required>
                                            </div>
                                        </div>

                                        <div class="col-md-6 mb-3">
                                            <label class="form-label fw-bold">Bitiş Tarihi</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fas fa-stop-circle"></i></span>
                                                <input type="datetime-local" class="form-control" asp-for="EndDate"
                                                       min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" required>
                                            </div>
                                        </div>

                                        <div class="col-md-6 mb-3">
                                            <label class="form-label fw-bold">Alış Lokasyonu</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                                @Html.DropDownListFor(x => x.PickUpLocationID, (List<SelectListItem>)ViewBag.ReservationlocationValues,
                                                new { @class = "form-control form-select" })
                                            </div>
                                        </div>

                                        <div class="col-md-6 mb-3">
                                            <label class="form-label fw-bold">Bırakılan Lokasyon</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fas fa-map-marker"></i></span>
                                                @Html.DropDownListFor(x => x.DropOffLocationID, (List<SelectListItem>)ViewBag.ReservationlocationValues,
                                                                                                new { @class = "form-control form-select" })
                                            </div>
                                        </div>

                                        <div class="col-md-6 mb-3">
                                            <label class="form-label fw-bold">Araç Seçimi</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fas fa-car"></i></span>
                                                @Html.DropDownListFor(x => x.CarID, (List<SelectListItem>)ViewBag.BrandValues,
                                                                                                new { @class = "form-control form-select" })
                                            </div>
                                        </div>

                                        <div class="col-md-6 mb-3">
                                            <label class="form-label fw-bold">Rezervasyon Durumu</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fas fa-info-circle"></i></span>
                                                <input type="text" class="form-control bg-light fw-bold" asp-for="@Model.Status" readonly>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Butonlar Bölümü - İstenilen Düzende -->
                            <div class="button-section mt-3">
                                <div class="row align-items-center">
                                    <div class="col-md-6">
                                        <!-- SOL: Durum Değiştirme Butonları -->
                                        <div class="button-group-left">
                                            @if (@Model.Status == "Rezervasyon Alındı")
                                            {
                                                <a href="/Admin/AdminReservation/ChangeReservationStatusToApproved/@Model.ReservationID"
                                                   class="btn btn-success">
                                                    <i class="fas fa-check-circle me-2"></i>Onayla
                                                </a>
                                                <a href="/Admin/AdminReservation/ChangeReservationStatusToCancaled/@Model.ReservationID"
                                                   class="btn btn-danger">
                                                    <i class="fas fa-times-circle me-2"></i>İptal Et
                                                </a>
                                            }

                                            @if (Model.Status == "Onaylandı")
                                            {
                                                <a href="/Admin/AdminReservation/ChangeReservationStatusToCancaled/@Model.ReservationID"
                                                   class="btn btn-danger">
                                                    <i class="fas fa-times-circle me-2"></i>İptal Et
                                                </a>
                                                <a href="/Admin/AdminReservation/ChangeReservationStatusToReservationReceipt/@Model.ReservationID"
                                                   class="btn btn-warning">
                                                    <i class="fas fa-undo me-2"></i>Beklemeye Al
                                                </a>
                                            }

                                            @if (Model.Status == "İptal Edildi")
                                            {
                                                <a href="/Admin/AdminReservation/ChangeReservationStatusToApproved/@Model.ReservationID"
                                                   class="btn btn-success">
                                                    <i class="fas fa-check-circle me-2"></i>Onayla
                                                </a>
                                                <a href="/Admin/AdminReservation/ChangeReservationStatusToReservationReceipt/@Model.ReservationID"
                                                   class="btn btn-warning">
                                                    <i class="fas fa-undo me-2"></i>Beklemeye Al
                                                </a>
                                            }
                                        </div>
                                    </div>

                                    <div class="col-md-6 mt-2 mt-md-0">
                                        <!-- SAĞ: Temel İşlem Butonları -->
                                        <div class="button-group-right">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-save me-2"></i>Güncelle
                                            </button>
                                            <a href="/Admin/AdminReservation" class="btn btn-dark">
                                                <i class="fas fa-list me-2"></i>Listeye Dön
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>

                        <!-- Ek Bilgiler (Küçük Kartlar) -->
                        <div class="row mt-4">
                            <div class="col-md-4 mb-2">
                                <div class="card border-light h-100">
                                    <div class="card-body p-3">
                                        <h6 class="card-title text-muted mb-2">
                                            <i class="fas fa-id-card me-2"></i>Ehliyet Bilgisi
                                        </h6>
                                        <p class="card-text mb-0">
                                            <span class="fw-bold">@Model.DriverLicenseYear yıldır</span> ehliyeti var
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4 mb-2">
                                <div class="card border-light h-100">
                                    <div class="card-body p-3">
                                        <h6 class="card-title text-muted mb-2">
                                            <i class="fas fa-user-tag me-2"></i>Müşteri Profili
                                        </h6>
                                        <p class="card-text mb-0">
                                            <span class="fw-bold">@Model.Age yaşında</span>, @Model.Name @Model.Surname
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4 mb-2">
                                <div class="card border-light h-100">
                                    <div class="card-body p-3">
                                        <h6 class="card-title text-muted mb-2">
                                            <i class="fas fa-envelope me-2"></i>İletişim
                                        </h6>
                                        <p class="card-text mb-0 small">
                                            @Model.Email
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Font Awesome ikonları -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<script>
    // Tarih validasyonu
    document.addEventListener('DOMContentLoaded', function() {
        const startDateInput = document.querySelector('input[name="StartDate"]');
        const endDateInput = document.querySelector('input[name="EndDate"]');

        if (startDateInput && endDateInput) {
            startDateInput.addEventListener('change', function() {
                endDateInput.min = this.value;
                if (new Date(endDateInput.value) < new Date(this.value)) {
                    endDateInput.value = this.value;
                }
            });
        }

        // Form submit öncesi kontrol
        const form = document.querySelector('form');
        if (form) {
            form.addEventListener('submit', function(e) {
                const ageInput = document.querySelector('input[name="Age"]');
                const licenseYearInput = document.querySelector('input[name="DriverLicenseYear"]');

                if (ageInput && ageInput.value < 18) {
                    alert('Yaş 18\'den küçük olamaz!');
                    e.preventDefault();
                    ageInput.focus();
                    return false;
                }

                if (licenseYearInput && licenseYearInput.value > ageInput.value - 18) {
                    alert('Ehliyet yılı yaş ile uyumlu değil!');
                    e.preventDefault();
                    licenseYearInput.focus();
                    return false;
                }

                return true;
            });
        }
    });
</script>