@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int sayac = 0;
}

<style>
    /* ================================
       ADMIN – TESTIMONIAL PAGE
    ================================ */

    /* Sayfa kartı */
    .card {
        border-radius: 16px !important;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        border: none;
    }

    /* Başlık */
    .card-title {
        font-weight: 800;
        color: #222;
    }

    /* Açıklama */
    .card-subtitle {
        font-size: 14px;
        color: #666;
    }

    /* Tablo */
    #tbl1 {
        border-collapse: separate !important;
        border-spacing: 0 12px;
    }

        /* Thead */
        #tbl1 thead th {
            background: #f8f9fa;
            font-weight: 800;
            color: #333;
            border: none !important;
            padding: 14px;
        }

        /* Satır */
        #tbl1 tbody tr {
            background: #ffffff;
            box-shadow: 0 6px 20px rgba(0,0,0,0.06);
            transition: .3s ease;
        }

            /* Hover */
            #tbl1 tbody tr:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 28px rgba(255,140,0,0.25);
            }

        /* Hücreler */
        #tbl1 tbody td {
            border: none !important;
            vertical-align: middle;
            padding: 14px;
            font-weight: 600;
            color: #444;
        }

        /* Görsel */
        #tbl1 img {
            width: 55px;
            height: 55px;
            object-fit: cover;
            border-radius: 12px;
            box-shadow: 0 4px 14px rgba(0,0,0,0.2);
        }

    /* Butonlar */
    .btn {
        border-radius: 10px;
        font-weight: 700;
        padding: 8px 14px;
        transition: .3s;
    }

    /* Sil */
    .btn-danger {
        background: linear-gradient(135deg, #ff4b4b, #ff1744);
        border: none;
    }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(255,23,68,0.45);
        }

    /* Güncelle */
    .btn-success {
        background: linear-gradient(135deg, #00c853, #009624);
        border: none;
    }

        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(0,200,83,0.45);
        }

    /* Yeni kayıt butonu */
    a.btn-primary {
        background: linear-gradient(135deg, #ff9800, #ff006a);
        border: none;
        font-weight: 800;
        padding: 12px 22px;
        box-shadow: 0 6px 18px rgba(255,0,102,0.35);
    }

        a.btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 24px rgba(255,0,102,0.45);
        }

    /* DataTable arama & pagination */
    .dataTables_filter input {
        border-radius: 10px;
        padding: 6px 12px;
        border: 1px solid #ddd;
    }

    .dataTables_paginate .paginate_button {
        border-radius: 8px !important;
        margin: 0 3px;
        font-weight: 700;
    }

        .dataTables_paginate .paginate_button.current {
            background: linear-gradient(135deg, #ff9800, #ff006a) !important;
            color: #fff !important;
        }

</style>

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title font-size-18">Müşteri Memnuniyet Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Ana sayfa Müşteri Memnuniyeti alanında bulunan bilgileri aşağıdan düzenleyebilirsiniz. Tema bütünlüğünün bozulmaması için <b>En Az Üç Tane Veri</b> olması gerekmektedir.
                        </p>
                        <br />
                        <table id="tbl1" class="table  nowrap">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Görsel</th>
                                    <th>Referans Ad Soyad</th>
                                    <th>Unvan</th>                                    
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>


                            <tbody>
                                @foreach (var item in Model)
                                {
                                    sayac++;
                                    <tr>
                                        <td>@sayac</td>                                        
                                        <td><img src="@item.ImageUrl" width="50" height="50" style="border-radius:10px" /> </td>
                                        <td>@item.Name</td>
                                        <td>@item.Title</td>

                                        <td>
                                            <a href="/Admin/AdminTestimonial/RemoveTestimonial/@item.TestimonialID" class="btn btn-danger waves-effect waves-light"> Sil </a>
                                        </td>

                                        <td>
                                            <a href="/Admin/AdminTestimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-success waves-effect waves-light"> Güncelle </a>
                                        </td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                        <br />
                        <a href="/Admin/AdminTestimonial/CreateTestimonial/" class="btn btn-primary waves-effect waves-light"> Yeni Müşteri Memnuniyeti Girişi </a>


                    </div> <!-- end card body-->
                </div> <!-- end card -->
            </div><!-- end col-->
        </div>

    </div> <!-- container-fluid -->
</div>


<script src="~/Admin/vertical/assets/js/jquery.min.js"></script>
<script src="~/Admin/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/Admin/plugins/datatables/dataTables.bootstrap4.js"></script>
<script src="~/Admin/plugins/datatables/dataTables.responsive.min.js"></script>
<script src="~/Admin/plugins/datatables/responsive.bootstrap4.min.js"></script>
<script src="~/Admin/plugins/datatables/dataTables.buttons.min.js"></script>
<script src="~/Admin/plugins/datatables/buttons.bootstrap4.min.js"></script>
<script src="~/Admin/plugins/datatables/buttons.html5.min.js"></script>
<script src="~/Admin/plugins/datatables/buttons.flash.min.js"></script>
<script src="~/Admin/plugins/datatables/buttons.print.min.js"></script>
<script src="~/Admin/plugins/datatables/dataTables.keyTable.min.js"></script>
<script src="~/Admin/plugins/datatables/dataTables.select.min.js"></script>
<script src="~/Admin/plugins/datatables/pdfmake.min.js"></script>
<script src="~/Admin/plugins/datatables/vfs_fonts.js"></script>
<!-- third party js ends -->
