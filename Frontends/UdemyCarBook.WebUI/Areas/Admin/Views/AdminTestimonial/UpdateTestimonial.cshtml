@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    /* ================================
       ADMIN – UPDATE TESTIMONIAL
    ================================ */

    .card {
        border-radius: 18px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        border: none;
    }

    .card-title {
        font-weight: 800;
        color: #222;
    }

    .card-subtitle {
        font-size: 14px;
        color: #666;
        line-height: 1.6;
    }

    /* Form */
    .form-group label {
        font-weight: 700;
        color: #333;
    }

    .form-control {
        border-radius: 12px;
        padding: 12px 14px;
        border: 1px solid #ddd;
        transition: .3s;
    }

        .form-control:focus {
            border-color: #ff9800;
            box-shadow: 0 0 0 3px rgba(255,152,0,0.2);
        }

    /* Ön izleme alanı */
    .image-preview-wrapper {
        background: #f9f9f9;
        border-radius: 16px;
        padding: 20px;
        text-align: center;
        box-shadow: inset 0 0 0 2px #eee;
        margin-bottom: 20px;
    }

        .image-preview-wrapper img {
            width: 140px;
            height: 140px;
            object-fit: cover;
            border-radius: 50%;
            box-shadow: 0 6px 20px rgba(0,0,0,0.25);
            transition: .3s;
        }

        .image-preview-wrapper span {
            display: block;
            margin-top: 10px;
            font-size: 13px;
            color: #666;
            font-weight: 600;
        }

    /* Butonlar */
    .btn {
        border-radius: 10px;
        font-weight: 700;
        padding: 10px 18px;
        transition: .3s;
    }

    .btn-success {
        background: linear-gradient(135deg, #00c853, #009624);
        border: none;
    }

        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(0,200,83,0.45);
        }

    .btn-danger {
        background: linear-gradient(135deg, #ff4b4b, #ff1744);
        border: none;
    }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(255,23,68,0.45);
        }

</style>

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title font-size-18"> Müşteri Memnuniyeti Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Ana sayfa Müşteri Memnuniyeti bölümünündeki bir kayıdın güncelleme işlemlerini bu sayfa üzerinden gerçekleştirebilirsiniz.  İlgili alanları eksiksiz  doldurmanız önemlidir.  Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                        <br />
                        <form method="post">
                            <input type="hidden" asp-for="@Model.TestimonialID" />
                            <div class="form-group">
                                <label>Referans Ad Soyad</label>
                                <input type="text" class="form-control" asp-for="@Model.Name">
                            </div>

                            <div class="form-group">
                                <label>Unvan</label>
                                <input type="text" class="form-control" asp-for="@Model.Title">
                            </div>

                            <div class="image-preview-wrapper">
                                <img id="imgPreview" src="@Model.ImageUrl" alt="Ön İzleme">
                                <span>Görsel Ön İzleme</span>
                            </div>

                            <div class="form-group">
                                <label>Görsel Link</label>
                                <input type="text" class="form-control" asp-for="@Model.ImageUrl" id="ImageUrl">
                            </div>

                            <div class="form-group">
                                <label>Yorum</label>
                                <textarea rows="5" class="form-control" asp-for="@Model.Comment"></textarea>
                            </div>


                            <button type="submit" class="btn btn-success waves-effect waves-light"> Müşteri Memnuniyeti Güncelle</button>
                            <a href="/Admin/AdminTestimonial" class="btn btn-danger waves-effect waves-light">  Müşteri Memnuniyeti Listesine Dön </a>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const imageInput = document.getElementById("ImageUrl");
    const imgPreview = document.getElementById("imgPreview");

    imageInput.addEventListener("input", function () {
        const url = this.value.trim();
        if (url.length > 5) {
            imgPreview.src = url;
        }
    });

    // Hatalı linkte fallback
    imgPreview.onerror = function () {
        this.src = "/images/no-image.png"; // istersen kaldırabilirsin
    };
</script>




