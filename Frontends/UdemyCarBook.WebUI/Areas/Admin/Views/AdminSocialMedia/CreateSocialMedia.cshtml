@model CreateSocialMediaDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title font-size-18">Yeni Sosya Medya Girişi</h4>
                        <p class="card-subtitle mb-4">Kullandığınız sosyal medya hesaplarına yeni bir tane daha ekleme işlemleri bu sayfa üzerinden gerçekleştirebilirsiniz.  İlgili alanları eksiksiz  doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                        <br />
                        <form method="post">

                            <div class="form-group">
                                <label>Sosya Medya Başılığı</label>
                                <input type="text" class="form-control" asp-for="@Model.Name">
                            </div>

                            <div class="form-group">
                                <label>Link</label>
                                <input type="text" class="form-control" asp-for="@Model.Url">
                            </div>

                            <div class="form-group">
                                <label>İkon</label>
                                <input type="text" class="form-control" asp-for="@Model.Icon">
                            </div>


                            <button type="submit" class="btn btn-primary waves-effect waves-light">Sosya Medyayı Kaydet</button>
                            <a href="/Admin/AdminSocialMedia" class="btn btn-danger waves-effect waves-light"> Sosya Medya Listesine Dön </a>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



