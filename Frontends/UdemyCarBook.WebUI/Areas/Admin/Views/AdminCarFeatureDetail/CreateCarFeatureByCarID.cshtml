@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "CreateCarFeatureByCarID";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title font-size-18">Araca Ait Özellik Ekleme Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Araca ait özellik tanımlama yapılacak sayfadır.
                        </p>

                        <form method="post">

                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <div class="form-check">
                                    <input type="hidden" asp-for="@Model[i].FeatureID" />
                                    <input type="hidden" asp-for="@Model[i].Name" />
                                    <input type="checkbox"  class="form-check-input" />
                                    <label class="form-check-label">@Model[i].Name</label>
                                </div>
                            }
                            <br />
                            <button class="btn btn-primary">Araca Özellikleri Tanımla</button>
                        </form>

                    </div> <!-- end card body-->
                </div> <!-- end card -->
            </div><!-- end col-->
        </div>

    </div> <!-- container-fluid -->
</div>

