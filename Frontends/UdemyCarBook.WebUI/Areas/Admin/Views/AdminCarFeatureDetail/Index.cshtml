@model List<ResultCarFeatureByCarIdDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title font-size-18">Araca Ait Özellikler Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Araca ait özellik eklenmesi yapailir, mevcut özellikleri kaldırabilir, ilgili güncellemesi yapabilirsiniz.
                        </p>
                   @if(Model.Count>0)
                        {
                            <form method="post">

                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    <div class="form-check">
                                        <input type="hidden" asp-for="@Model[i].CarFeatureID" />
                                        <input type="hidden" asp-for="@Model[i].FeatureName" />
                                        <input type="checkbox" asp-for="@Model[i].Available" class="form-check-input" />
                                        <label class="form-check-label" asp-for="@Model[i].Available">@Model[i].FeatureName</label>
                                    </div>
                                }
                                <br />
                                <button class="btn btn-success">Değişiklikleri Kaydet</button>
                            </form>
                        }
                        else
                        {
                            <td>
                                <a href="/Admin/AdminCarFeatureDetail/CreateCarFeatureByCarID" class="btn btn-dark waves-effect waves-light"> Özellik Tanımla </a>
                            </td>
                        }


                    </div> <!-- end card body-->
                </div> <!-- end card -->
            </div><!-- end col-->
        </div>

    </div> <!-- container-fluid -->
</div>