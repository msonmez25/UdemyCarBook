@model UpdateFooterAddressDto
@{
    ViewData["Title"] = "UpdateFooterAddress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title font-size-18">Yeni Adres Girişi</h4>
                        <p class="card-subtitle mb-4">Adres alanına ait bilglileri aşağıdaki panaleden girebilirsiniz. İlgili alanları eksiksiz  doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                        <br />

                        <form method="post">
                            <input type="hidden" asp-for="@Model.FooterAddressID"/>
                            <div class="form-group">
                                <label>Adres</label>
                                <input type="text" class="form-control" asp-for="@Model.Address">
                            </div>

                            <div class="form-group">
                                <label>Mail</label>
                                <input type="email" class="form-control" asp-for="@Model.Email">
                            </div>

                            <div class="form-group">
                                <label>Telefon</label>
                                <input type="tel" class="form-control" asp-for="@Model.Phone">
                            </div>

                            <div class="form-group">
                                <label>Açıklama</label>
                                <textarea rows="5" class="form-control" asp-for="@Model.Description"></textarea>
                            </div>



                            <button type="submit" class="btn btn-success waves-effect waves-light">Adresi Güncelle</button>
                            <a href="/Admin/AdminFooterAddress" class="btn btn-danger waves-effect waves-light"> Adres Listesine Dön </a>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




