@model List<ResultFooterAddressDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    
}


<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title font-size-18">iletişim ve Footer Alanı Adres Sayfası</h4>
                        <p class="card-subtitle mb-4">
                            İletişim sayfası ve Footer alanında bulunan adres bölümleri ile ilgili düzenleme işlemlerini bu sayfadan yapabilirsiniz. Tema bütünlüğünün bozulmaması için <b>Sadece Bir Tane Veri</b> olması gerekmektedir.
                        </p>
                        <br />
                        <table id="tbl1" class="table  nowrap">
                            <thead>
                                <tr>
                                    <th>Adres</th>
                                    <th>Telefon</th>
                                    <th>E-Mail</th>
                                    <th>Açıklama</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                    <th>Sitede Gör</th>
                                </tr>
                            </thead>


                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Address</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Email</td>
                                        <td>@item.Description.Substring(0, 5)...</td>                                      

                                        <td>
                                            <a href="/Admin/AdminFooterAddress/RemoveFooterAddress/@item.FooterAddressID" class="btn btn-danger waves-effect waves-light"> Sil </a>
                                        </td>

                                        <td>
                                            <a href="/Admin/AdminFooterAddress/UpdateFooterAddress/@item.FooterAddressID" class="btn btn-success waves-effect waves-light"> Güncelle </a>
                                        </td>

                                        <td>
                                            <a href="/Contact/Index/" class="btn btn-warning waves-effect waves-light" target="_blank"> Sitede Gör </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <br />
                        <a href="/Admin/AdminFooterAddress/CreateFooterAddress/" class="btn btn-primary waves-effect waves-light"> Yeni Adres Girişi </a>


                    </div> <!-- end card body-->
                </div> <!-- end card -->
            </div><!-- end col-->
        </div>

    </div> <!-- container-fluid -->
</div>


