        --teal-gradient: linear-gradient(135deg, #00b09b 0%, #96c93d 100%);
        --teal-gradient-hover: linear-gradient(135deg, #009e8a 0%, #88b537 100%);
        --orange-gradient: linear-gradient(135deg, #ff9966 0%, #ff5e62 100%);
        --orange-gradient-hover: linear-gradient(135deg, #e88a5c 0%, #e85458 100%);
        --blue-gradient: linear-gradient(135deg, #2193b0 0%, #6dd5ed 100%);
        --blue-gradient-hover: linear-gradient(135deg, #1e85a0 0%, #64c3d9 100%);
