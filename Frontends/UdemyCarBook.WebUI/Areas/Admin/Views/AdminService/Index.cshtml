@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int sayac = 0;
}


<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title font-size-18">Ana Sayfa Hizmetler Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Ana sayfada bulunan Hizmetler alanında bulunan bilgileri aşağıdan görüntüleyebilirsiniz. Tema bütünlüğünün bozulmaması için <b>Dört Tane Veri</b> olması gerekmektedir.
                        </p>
                        <br />
                        <table id="tbl1" class="table  nowrap">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Hizmet Başlığı</th>
                                    <th>Açıklama</th>
                                    <th>İkon</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>


                            <tbody>
                                @foreach (var item in Model)
                                {
                                    sayac++;
                                    <tr>
                                        <td>@sayac</td>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.IconUrl</td>

                                        <td>
                                            <a href="/Admin/AdminService/RemoveService/@item.ServiceID" class="btn btn-danger waves-effect waves-light"> Sil </a>
                                        </td>

                                        <td>
                                            <a href="/Admin/AdminService/UpdateService/@item.ServiceID" class="btn btn-success waves-effect waves-light"> Güncelle </a>
                                        </td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                        <br />
                        <a href="/Admin/AdminService/CreateService/" class="btn btn-primary waves-effect waves-light"> Yeni Hizmet Girişi </a>


                    </div> <!-- end card body-->
                </div> <!-- end card -->
            </div><!-- end col-->
        </div>

    </div> <!-- container-fluid -->
</div>


