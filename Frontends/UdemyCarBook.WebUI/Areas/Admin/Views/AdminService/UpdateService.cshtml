@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title font-size-18">Hakkımızda Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Ana sayfada bulunan Hizmetler alanında bulunan bilgileri aşağıdan düzenleyebilirsiniz.  İlgili alanları eksiksiz  doldurmanız önemlidir.  Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                        <br />
                        <form method="post">
                            <input type="hidden" asp-for="@Model.ServiceID" />
                            <div class="form-group">
                                <label>Hizmet Başlığı</label>
                                <input type="text" class="form-control" asp-for="@Model.Title">
                            </div>

                            <div class="form-group">
                                <label>Açıklama</label>
                                <textarea rows="5" class="form-control" asp-for="@Model.Description"></textarea>
                            </div>

                            <div class="form-group">
                                <label>İkon</label>
                                <input type="text" class="form-control" asp-for="@Model.IconUrl">
                            </div>



                            <button type="submit" class="btn btn-success waves-effect waves-light">Hakkımızda Güncelle</button>
                            <a href="/Admin/AdminService" class="btn btn-danger waves-effect waves-light"> Hakkımızda Listesine Dön </a>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





