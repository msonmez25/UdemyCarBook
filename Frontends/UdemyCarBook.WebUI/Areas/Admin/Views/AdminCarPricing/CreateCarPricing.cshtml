@model CreateCarPricingDto
@{
    ViewData["Title"] = "CreateCarPricing";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    /* Kart görünümü */
    .card {
        border: none;
        border-radius: 16px;
        box-shadow: 0 12px 35px rgba(0,0,0,0.07);
    }

    .card-body {
        padding: 35px;
    }

    /* Sayfa başlığı */
    .page-form-title {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 20px;
    }

        .page-form-title i {
            font-size: 1.6rem;
            color: #10b981;
        }

        .page-form-title h4 {
            margin: 0;
            font-weight: 700;
            color: #1f2937;
        }

    .card-subtitle {
        font-size: 0.95rem;
        color: #6b7280;
        margin-bottom: 30px;
        line-height: 1.6;
    }

    /* Form grup */
    .form-group {
        margin-bottom: 22px;
    }

        .form-group label {
            font-weight: 600;
            font-size: 0.9rem;
            color: #374151;
            margin-bottom: 6px;
        }

    /* Input & Select */
    .form-control {
        border-radius: 10px;
        border: 1px solid #e5e7eb;
        padding: 11px 14px;
        font-size: 0.95rem;
        background-color: #f9fafb;
        transition: all 0.25s ease;
        width: 100%;
    }

        .form-control:focus {
            background-color: #ffffff;
            border-color: #10b981;
            box-shadow: 0 0 0 3px rgba(16,185,129,0.18);
        }

        .form-control[readonly] {
            background-color: #f3f4f6;
            cursor: not-allowed;
        }

    /* Buton alanı */
    .form-actions {
        margin-top: 30px;
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
    }

        .form-actions .btn {
            border-radius: 10px;
            padding: 10px 22px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .card-body

    {
        padding: 25px 20px;
    }

    .page-form-title h4 {
        font-size: 1.2rem;
    }

    }

    select.form-control {
        height: calc(2.5rem + 2px);
        line-height: 1.5;
        padding-top: 6px;
        padding-bottom: 6px;
    }

</style>


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                 
                    <div class="card-body">

                        <div class="page-form-title">
                            <i class="fas fa-tags"></i>
                            <h4>Fiyat Ekleme Sayfası</h4>
                        </div>

                        <p class="card-subtitle">
                            Kiralama türüne göre fiyat ekleme sayfasıdır.
                            Lütfen her kiralama türünden sadece <b>bir tane</b> ekleyiniz.
                        </p>

                        <form method="post">

                            <div class="form-group">
                                <label>Araç Marka Model</label>
                                <input type="hidden" asp-for="@Model.CarID" value="@ViewBag.AracID" />
                                <input type="text" class="form-control" placeholder="@ViewBag.CarModelBrand" readonly>
                            </div>

                            <div class="form-group">
                                <label>Kiralama Türü</label>
                                @Html.DropDownListFor(
                                x => x.PricingID,
                                                                (List<SelectListItem>)ViewBag.pricingValues,
                                                                new { @class = "form-control" }
                                                                )
                            </div>

                            <div class="form-group">
                                <label>Kiralama Fiyatı</label>
                                <input type="text" class="form-control" asp-for="@Model.Amount" placeholder="₺ Örn: 1500">
                            </div>

                            <div class="form-actions">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-save"></i>
                                    Kiralama Fiyatını Ekle
                                </button>

                                <a href="/Admin/AdminCarPricing/GetCarPricingByCarIdToPricingName/@ViewBag.AracID"
                                   class="btn btn-danger">
                                    <i class="fas fa-arrow-left"></i>
                                    Fiyat Listesine Dön
                                </a>
                            </div>

                        </form>

                    </div>


                </div>
            </div>
        </div>
    </div>
</div>


