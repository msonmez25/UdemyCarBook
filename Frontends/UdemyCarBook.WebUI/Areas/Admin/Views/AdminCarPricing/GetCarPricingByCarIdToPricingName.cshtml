@model List<GetCarPricingByCarIdToPricingNameDto>
@{
    ViewData["Title"] = "Kiralama Fiyat Listesi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int sayac = 0;
}

<style>
    .page-header-card {
        background: #fff;
        border-radius: 15px;
        padding: 20px 25px;
        margin-bottom: 25px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        border-left: 5px solid #667eea;
    }

    .info-card {
        background: linear-gradient(135deg, #e8f4fc 0%, #d1ecf1 100%);
        border-left: 4px solid #3498db;
        padding: 15px 20px;
        margin-bottom: 20px;
        border-radius: 0 5px 5px 0;
        font-size: 15px;
        color: #2c3e50;
    }

    .table-card {
        background: white;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 5px 30px rgba(0,0,0,0.08);
    }

    table.dataTable thead th {
        background: #f8f9fa;
        font-weight: 600;
        color: #2c3e50;
        border-bottom: 2px solid #dee2e6;
    }

    table.dataTable tbody tr:hover {
        background-color: #f1f8ff;
    }

    .btn {
        padding: 6px 14px;
        font-size: 14px;
        font-weight: 600;
        border-radius: 6px;
    }

    .price-badge {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: #fff;
        padding: 6px 12px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 14px;
    }

    /* SOL ALT SABİT BUTONLAR */
    .fixed-action-buttons {
        position: fixed;
        left: 25px;
        bottom: 25px;
        display: flex;
        gap: 12px;
        z-index: 9999;
    }

    .btn-gradient {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: #fff !important;
        border: none;
        padding: 10px 24px;
        border-radius: 30px;
        font-weight: 600;
        font-size: 14px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all .3s ease;
        text-decoration: none;
    }

        .btn-gradient:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102,126,234,.35);
        }

    .btn-back-list {
        background: #f1f3f5;
        color: #343a40 !important;
        padding: 10px 24px;
        border-radius: 30px;
        font-weight: 600;
        font-size: 14px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
        transition: all .3s ease;
    }

        .btn-back-list:hover {
            background: #e9ecef;
            transform: translateY(-2px);
        }

    @@media (max-width:768px) {
        .fixed-action-buttons {
            left: 15px;
            right: 15px;
            bottom: 15px;
            flex-direction: column;
        }

            .fixed-action-buttons a {
                justify-content: center;
                width: 100%;
            }
    }

    .table-footer-actions {
        display: flex;
        gap: 12px;
        margin-top: 20px;
    }

    @@media (max-width:768px) {
        .table-footer-actions

    {
        flex-direction: column;
        align-items: stretch;
    }

    .table-footer-actions a {
        width: 100%;
        justify-content: center;
    }

    }
</style>

<div class="page-content">
    <div class="container-fluid">

        <!-- BAŞLIK -->
        <div class="page-header-card">
            <h4 class="card-title mb-1">
                <i class="fas fa-tags text-primary me-2"></i>
                Kiralama Fiyat Listesi
            </h4>
            <p class="text-muted mb-0">
                İlgili araca ait kiralama fiyatlarını türlerine göre düzenleyebilirsiniz.
            </p>
        </div>

        <!-- BİLGİ -->
        <div class="info-card">
            <i class="fas fa-car me-2"></i>
            Araç Marka / Model :
            <b>@ViewBag.CarModelBrand</b>
        </div>

        <!-- TABLO -->
        <div class="table-card">
            <table id="tbl1" class="table table-hover nowrap w-100">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kiralama Türü</th>
                        <th>Fiyat</th>
                        <th class="text-center">Sil</th>
                        <th class="text-center">Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        sayac++;
                        <tr>
                            <td>@sayac</td>
                            <td>@item.PricingName</td>
                            <td>
                                <span class="price-badge">@item.Amount ₺</span>
                            </td>
                            <td class="text-center">
                                <a href="/Admin/AdminCarPricing/RemoveCarPricing/@item.CarPricingID?carId=@item.CarID"
                                   class="btn btn-danger"
                                   onclick="return confirm('Bu kiralama fiyatını silmek istediğinize emin misiniz?')">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                            <td class="text-center">
                                <a href="/Admin/AdminCarPricing/UpdateCarPricing/@item.CarPricingID"
                                   class="btn btn-success">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <!-- TABLO SOL ALT BUTONLAR -->
            <div class="table-footer-actions">
                <a href="/Admin/AdminCarPricing/CreateCarPricing/" class="btn btn-primary">
                    <i class="fas fa-plus-circle"></i>
                    Yeni Kiralama Girişi
                </a>

                <a href="/Admin/AdminCar" class="btn btn-danger">
                    <i class="fas fa-arrow-left"></i>
                    Araç Listesine Dön
                </a>
            </div>
        </div>

    </div>
</div>



<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<script src="~/Admin/vertical/assets/js/jquery.min.js"></script>
<script src="~/Admin/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/Admin/plugins/datatables/dataTables.bootstrap4.js"></script>
<script src="~/Admin/plugins/datatables/dataTables.responsive.min.js"></script>
<script src="~/Admin/plugins/datatables/responsive.bootstrap4.min.js"></script>

<script>
    $('#tbl1').DataTable({
        responsive: true,
        language: {
            url: "https://cdn.datatables.net/plug-ins/1.10.20/i18n/Turkish.json"
        }
    });
</script>
