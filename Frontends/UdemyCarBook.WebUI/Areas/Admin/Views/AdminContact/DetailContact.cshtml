@model DetailContactDto
@{
    ViewData["Title"] = "Mesaj Detayı";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
 
    /* Genel kart iyileştirme */
    .card {
        border-radius: 14px;
        border: none;
        box-shadow: 0 10px 30px rgba(0,0,0,0.06);
    }

    .card-body {
        padding: 35px;
    }

    /* Sayfa başlığı hissi */
    .form-title {
        font-size: 1.4rem;
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .form-title i {
            color: #10b981;
            font-size: 1.6rem;
        }

    /* Form grup düzeni */
    .form-group {
        margin-bottom: 22px;
    }

        .form-group label {
            font-weight: 600;
            font-size: 0.9rem;
            color: #374151;
            margin-bottom: 6px;
        }

    /* Input ve textarea */
    .form-control {
        border-radius: 10px;
        border: 1px solid #e5e7eb;
        padding: 11px 14px;
        font-size: 0.95rem;
        transition: all 0.25s ease;
        background-color: #f9fafb;
    }

        .form-control:focus {
            border-color: #10b981;
            box-shadow: 0 0 0 3px rgba(16,185,129,0.15);
            background-color: #ffffff;
        }

    textarea.form-control {
        resize: vertical;
        min-height: 140px;
        line-height: 1.6;
    }

    /* Read-only hissi (detay sayfası gibi) */
    .form-control[readonly],
    .form-control:disabled {
        background-color: #f3f4f6;
        cursor: not-allowed;
    }

    /* Alt buton alanı */
    .form-actions {
        margin-top: 30px;
        display: flex;
        justify-content: flex-end;
    }

        .form-actions .btn {
            border-radius: 10px;
            padding: 10px 22px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

    /* Responsive iyileştirme */
    @@media (max-width: 768px) {
        .card-body

    {
        padding: 25px 20px;
    }

    .form-title {
        font-size: 1.2rem;
    }

    }
</style>



<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <div class="form-title">
                            <i class="fas fa-envelope-open-text"></i>
                            Mesaj Detayı
                        </div>

                        <form>
                            <input type="hidden" asp-for="@Model.ContactID" />

                            <div class="form-group">
                                <label>Gönderen Ad Soyad</label>
                                <input type="text" class="form-control" asp-for="@Model.Name" readonly>
                            </div>

                            <div class="form-group">
                                <label>E-Mail Adresi</label>
                                <input type="text" class="form-control" asp-for="@Model.Email" readonly>
                            </div>

                            <div class="form-group">
                                <label>Tarih</label>
                                @Html.TextBoxFor(x => x.SendDate, "{0:dd.MM.yyyy HH:mm}", new { @class = "form-control", @readonly = "readonly" })
                            </div>

                            <div class="form-group">
                                <label>Konu</label>
                                <input type="text" class="form-control" asp-for="@Model.Subject" readonly>
                            </div>

                            <div class="form-group">
                                <label>Mesaj</label>
                                <textarea rows="5" class="form-control" asp-for="@Model.Message" readonly></textarea>
                            </div>

                            <div class="form-actions">
                                <a href="/Admin/AdminContact" class="btn btn-danger">
                                    <i class="fas fa-arrow-left"></i>
                                    İletişim Listesine Dön
                                </a>
                            </div>
                        </form>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>