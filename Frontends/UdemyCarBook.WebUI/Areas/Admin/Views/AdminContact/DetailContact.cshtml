@model DetailContactDto
@{
    ViewData["Title"] = "DetailContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <br />

                        <form>
                            <input type="hidden" asp-for="@Model.ContactID" />

                            <div class="form-group">
                                <label>Gönderen Ad Soyad</label>
                                <input type="text" class="form-control" asp-for="@Model.Name">
                            </div>

                            <div class="form-group">
                                <label>E-Mail Adresi</label>
                                <input type="text" class="form-control" asp-for="@Model.Email">
                            </div>

                            <div class="form-group">
                                <label>Tarih</label>
                                @Html.TextBoxFor(x => x.SendDate, "{0:dd.MM.yyyy HH:mm}", new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label>Konu</label>
                                <input type="text" class="form-control" asp-for="@Model.Subject">
                            </div>

                            <div class="form-group">
                                <label>Mesaj</label>
                                <textarea rows="5" class="form-control" asp-for="@Model.Message"></textarea>
                            </div>


                            
                            <a href="/Admin/AdminContact" class="btn btn-danger waves-effect waves-light"> İletişim Listesine Dön </a>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




