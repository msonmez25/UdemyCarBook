@model UpdateRentACarDto
@{
    ViewData["Title"] = "UpdateRentACar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title font-size-18">Yeni Lokasyon Araç Kiralama Güncelleme</h4>
                        <p class="card-subtitle mb-4">Var olan Lokasyonlara göre arç uygunluğunun belirlendiği sayfadır.  İlgili alanları eksiksiz  doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                        <br />
                        <form method="post">
                            <input type="hidden" asp-for="@Model.RentACarID" />
                            <div class="form-group">
                                <label>Lokasyon</label>
                                @Html.DropDownListFor(x => x.LocationID, (List<SelectListItem>)ViewBag.locationValues, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label>Marka Model</label>
                                @Html.DropDownListFor(x => x.CarID, (List<SelectListItem>)ViewBag.BrandValues, new { @class = "form-control" })
                            </div>


                            <button type="submit" class="btn btn-primary waves-effect waves-light">Uygun Arac - Lokasyon Güncelle</button>
                            <a href="/Admin/AdminRentACar/Index" class="btn btn-danger waves-effect waves-light"> Lokasyon Uygun Araç Listesine Dön </a>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



