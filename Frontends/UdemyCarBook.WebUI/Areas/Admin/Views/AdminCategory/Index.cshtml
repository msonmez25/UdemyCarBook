@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int sayac = 0;
}


<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title font-size-18">Blog Kategorileri Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Bloglara ait kategorilerle ilgili işlemleri aşağıdan düzenleyebilirsiniz. Kategori girişi ve güncellemesi yaparken bilgileri eksiksiz girmeye özen gösteriniz.
                        </p>
                        <br />
                        <table id="tbl1" class="table  nowrap">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Kategori Adı</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                    <th>Kategoriye Ait Bloglar</th>
                                </tr>
                            </thead>


                            <tbody>
                                @foreach (var item in Model)
                                {
                                    sayac++;
                                    <tr>
                                        <td>@sayac</td>
                                        <td>@item.Name</td>

                                        <td>
                                            <a href="/Admin/AdminCategory/RemoveCategory/@item.CategoryID" class="btn btn-danger waves-effect waves-light"> Sil </a>
                                        </td>

                                        <td>
                                            <a href="/Admin/AdminCategory/UpdateCategory/@item.CategoryID" class="btn btn-success waves-effect waves-light"> Güncelle </a>
                                        </td>

                                        <td>
                                            <a href="/Category/Index" class="btn btn-warning waves-effect waves-light"> Sitede Gör </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <br />
                        <a href="/Admin/AdminCategory/CreateCategory/" class="btn btn-primary waves-effect waves-light"> Yeni Kategori Girişi </a>


                    </div> <!-- end card body-->
                </div> <!-- end card -->
            </div><!-- end col-->
        </div>

    </div> <!-- container-fluid -->
</div>


<script src="~/Admin/vertical/assets/js/jquery.min.js"></script>
