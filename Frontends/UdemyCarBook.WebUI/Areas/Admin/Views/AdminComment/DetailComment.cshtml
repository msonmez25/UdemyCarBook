@model DetailCommentDto
@{
    ViewData["Title"] = "DetailComment";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title font-size-18">Yorum Detay Sayfası</h4>
                        <p class="card-subtitle mb-4">Bloğa yapılan yorumun detayını bu sayfa üzerinden görebilirsiniz.</p>
                        <br />
                        <form>
                            <input type="hidden" asp-for="@Model.CommentID" />

                            <div class="form-group">
                                <label>Ad</label>
                                <input type="text" class="form-control" asp-for="@Model.Name">
                            </div>                                                      

                            <div class="form-group">
                                <label>Açıklama</label>
                                <textarea rows="5" class="form-control" asp-for="@Model.Description"></textarea>
                            </div>

                            <div class="form-group">
                                <label>Tarih</label>
                                @Html.TextBoxFor(x => x.CreatedDate, "{0:dd.MM.yyyy HH:mm}", new { @class = "form-control" })
                            </div>

                            <a href="/Admin/AdminComment" class="btn btn-danger waves-effect waves-light"> Yorumlar Listesine Dön </a>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


