@model List<ResultCommentListByBLogIdDto>
@{
    ViewData["Title"] = "Bloga Yapılan Yorumlar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    /* Minimal ve Profesyonel Stil */
    .page-header-card {
        background: white;
        border-radius: 15px;
        padding: 20px 25px;
        margin-bottom: 25px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        border-left: 5px solid #667eea;
    }

    /* BÜYÜK BADGE STİLLERİ */
    .stats-badge {
        display: inline-block;
        padding: 12px 20px;
        border-radius: 12px;
        font-size: 1rem;
        font-weight: 600;
        text-align: center;
        min-width: 140px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        margin: 0 8px;
    }

        .stats-badge:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

    .stats-badge-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .stats-badge-success {
        background: linear-gradient(135deg, #42e695 0%, #3bb2b8 100%);
        color: white;
    }

    .stats-badge-warning {
        background: linear-gradient(135deg, #f6d365 0%, #fda085 100%);
        color: #7d4e00;
    }

    .stats-badge-danger {
        background: linear-gradient(135deg, #ff6b6b 0%, #ffa8a8 100%);
        color: white;
    }

    .badge-icon {
        font-size: 1.2rem;
        margin-right: 8px;
        vertical-align: middle;
    }

    .badge-text {
        display: block;
        font-size: 0.85rem;
        opacity: 0.9;
        margin-bottom: 4px;
    }

    .badge-number {
        display: block;
        font-size: 1.6rem;
        font-weight: 700;
    }

    /* Blog Başlık Kartı */
    .blog-info-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 15px;
        padding: 20px;
        margin-bottom: 30px;
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        border: none;
    }

    .blog-title-large {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .blog-subtitle {
        font-size: 0.9rem;
        opacity: 0.9;
        margin-bottom: 0;
    }

    /* Yorum Kartları */
    .comments-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .comment-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        border: 1px solid #f1f3fa;
        height: 100%;
    }

        .comment-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(0,0,0,0.15);
            border-color: #e1e4f1;
        }

    .comment-header {
        background: linear-gradient(135deg, #f8f9fe 0%, #e9ecef 100%);
        padding: 15px 20px;
        border-bottom: 1px solid #f1f3fa;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .comment-number {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .number-badge {
        width: 32px;
        height: 32px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 0.9rem;
    }

    .comment-author {
        font-weight: 600;
        color: #374151;
        font-size: 1rem;
        margin: 0;
    }

    .comment-body {
        padding: 20px;
    }

    .comment-text {
        color: #495057;
        line-height: 1.6;
        font-size: 0.95rem;
        margin-bottom: 15px;
        max-height: 120px;
        overflow: hidden;
        position: relative;
    }

        .comment-text.expanded {
            max-height: none;
        }

    .read-more-btn {
        color: #667eea;
        font-size: 0.85rem;
        font-weight: 600;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 5px;
        background: none;
        border: none;
        padding: 0;
        margin-top: 5px;
    }

        .read-more-btn:hover {
            color: #764ba2;
            text-decoration: underline;
        }

    .comment-footer {
        padding: 15px 20px;
        background: #f8f9fa;
        border-top: 1px solid #f1f3fa;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .comment-date {
        font-size: 0.8rem;
        color: #6c757d;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .comment-actions {
        display: flex;
        gap: 10px;
    }

    .btn-action {
        padding: 8px 16px;
        border-radius: 8px;
        font-size: 0.85rem;
        font-weight: 600;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .btn-remove {
        background: linear-gradient(135deg, #ff6b6b 0%, #ffa8a8 100%);
        color: white;
    }

        .btn-remove:hover {
            background: linear-gradient(135deg, #ff5252 0%, #ff8e8e 100%);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(255, 107, 107, 0.3);
        }

    .btn-restore {
        background: linear-gradient(135deg, #42e695 0%, #3bb2b8 100%);
        color: white;
    }

        .btn-restore:hover {
            background: linear-gradient(135deg, #38d689 0%, #35a4aa 100%);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(66, 230, 149, 0.3);
        }

    /* Boş Yorum Durumu */
    .empty-comments {
        text-align: center;
        padding: 60px 20px;
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        margin: 30px 0;
    }

    .empty-icon {
        font-size: 4rem;
        color: #e9ecef;
        margin-bottom: 20px;
    }

    .empty-title {
        color: #6c757d;
        font-weight: 600;
        font-size: 1.2rem;
        margin-bottom: 10px;
    }

    .empty-subtitle {
        color: #adb5bd;
        font-size: 0.9rem;
        max-width: 500px;
        margin: 0 auto 30px;
    }

    /* Geri Dön Butonu */
    .btn-back {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 12px 24px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.95rem;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
        text-decoration: none;
    }

        .btn-back:hover {
            background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
            text-decoration: none;
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .stats-badge {
            padding: 10px 15px;
            min-width: 120px;
            margin: 5px;
            display: block;
            width: calc(100% - 20px);
        }

        .badge-number {
            font-size: 1.4rem;
        }

        .comments-grid {
            grid-template-columns: 1fr;
        }

        .comment-footer {
            flex-direction: column;
            gap: 10px;
            text-align: center;
        }

        .comment-actions {
            justify-content: center;
        }

        .blog-title-large {
            font-size: 1.2rem;
        }
    }

    /* Yükseklik sınırlaması için */
    .comment-text-wrapper {
        position: relative;
    }

    .text-fade {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 30px;
        background: linear-gradient(to bottom, rgba(255,255,255,0), white);
        pointer-events: none;
    }

    /* Filtre butonları */
    .filter-buttons {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
        flex-wrap: wrap;
    }

    .filter-btn {
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        border: 2px solid transparent;
        cursor: pointer;
        transition: all 0.3s ease;
        background: white;
        color: #495057;
        border-color: #e9ecef;
    }

        .filter-btn.active {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-color: #667eea;
        }

        .filter-btn:hover:not(.active) {
            border-color: #667eea;
            color: #667eea;
        }
</style>

<div class="page-content">
    <div class="container-fluid">

        <!-- Başlık Kartı -->
        <div class="page-header-card">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h4 class="mb-1" style="color: #374151; font-weight: 700; font-size: 1.4rem;">
                        <i class="fas fa-comments mr-2" style="color: #667eea;"></i>
                        Bloga Yapılan Yorumlar
                    </h4>
                    <p class="text-muted mb-0" style="font-size: 0.9rem;">Blog yazılarına yapılan tüm yorumlar</p>
                </div>
                <div class="col-md-6">
                    <div class="text-md-right">
                        <!-- KOMPAKT STATS BADGELER -->
                        <div class="d-flex justify-content-end flex-wrap">
                            <div class="stats-badge stats-badge-primary">
                                <span class="badge-text">
                                    <i class="fas fa-comment badge-icon"></i>Toplam Yorum
                                </span>
                                <span class="badge-number">@Model.Count</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (Model.Count > 0)
        {
            <!-- Blog Bilgisi Kartı -->
            <div class="blog-info-card">
                <div class="blog-title-large">
                    <i class="fas fa-blog"></i>
                    @Model.OrderBy(x => x.CommentID).FirstOrDefault().BlogName
                </div>
                <p class="blog-subtitle">
                    Bu blog yazısına toplam <strong>@Model.Count</strong> yorum yapılmıştır.
                    Yorumları aşağıda görebilir, yayından kaldırabilir veya tekrar aktif hale getirebilirsiniz.
                </p>
            </div>

            <!-- Yorum Grid -->
            <div class="comments-grid">
                @{
                    int sayac = 0;
                }
                @foreach (var item in Model)
                {
                    sayac++;
                    <div class="comment-card" data-comment-id="@item.CommentID">
                        <div class="comment-header">
                            <div class="comment-number">
                                <span class="number-badge">@sayac</span>
                                <h5 class="comment-author">@item.Name</h5>
                            </div>
                            <div class="comment-status">
                                @if (item.Status)
                                {
                                    <span style="color: #42e695; font-size: 0.8rem; font-weight: 600;">
                                        <i class="fas fa-check-circle"></i> Aktif
                                    </span>
                                }
                                else
                                {
                                    <span style="color: #ff6b6b; font-size: 0.8rem; font-weight: 600;">
                                        <i class="fas fa-times-circle"></i> Pasif
                                    </span>
                                }
                            </div>
                        </div>

                        <div class="comment-body">
                            <div class="comment-text-wrapper">
                                <div class="comment-text" id="comment-text-@item.CommentID">
                                    @item.Description
                                </div>
                                @if (item.Description.Length > 200)
                                {
                                    <div class="text-fade" id="fade-@item.CommentID"></div>
                                }
                            </div>
                            @if (item.Description.Length > 200)
                            {
                                <button class="read-more-btn" data-target="@item.CommentID">
                                    <i class="fas fa-chevron-down"></i>
                                    <span>Devamını Oku</span>
                                </button>
                            }
                        </div>

                        <div class="comment-footer">
                            <div class="comment-date">
                                <i class="far fa-clock"></i>
                                @(((DateTime)item.CreatedDate).ToString("dd.MM.yyyy HH:mm"))
                            </div>
                            <div class="comment-actions">
                                @if (item.Status)
                                {
                                    <a href="/Admin/AdminComment/RemoveComment/@item.CommentID"
                                       class="btn-action btn-remove"
                                       onclick="return confirm('Bu yorumu yayından kaldırmak istediğinize emin misiniz?')">
                                        <i class="fas fa-trash-alt"></i> Kaldır
                                    </a>
                                }
                                else
                                {
                                    <a href="/Admin/AdminComment/RestoreComment/@item.CommentID"
                                       class="btn-action btn-restore">
                                        <i class="fas fa-redo-alt"></i> Aktif Et
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- Boş Yorum Durumu -->
            <div class="empty-comments">
                <div class="empty-icon">
                    <i class="far fa-comment-slash"></i>
                </div>
                <h3 class="empty-title">Henüz Yorum Yok</h3>
                <p class="empty-subtitle">
                    <b>@Model.OrderBy(x => x.CommentID).FirstOrDefault()?.BlogName</b> başlıklı blog yazısına henüz hiç yorum yapılmamış.
                    Blog listesine dönerek diğer blogların yorumlarını inceleyebilirsiniz.
                </p>
            </div>
        }

        <!-- Geri Dön Butonu -->
        <div class="text-center mt-4">
            <a href="/Admin/AdminBlog" class="btn-back">
                <i class="fas fa-arrow-left"></i> Blog Listesine Dön
            </a>
        </div>

    </div>
</div>

<!-- Font Awesome ikonları -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<script>
    $(document).ready(function() {
        // "Devamını Oku" butonları
        $('.read-more-btn').click(function() {
            var commentId = $(this).data('target');
            var $commentText = $('#comment-text-' + commentId);
            var $fade = $('#fade-' + commentId);
            var $btn = $(this);
            var $icon = $btn.find('i');
            var $text = $btn.find('span');

            if ($commentText.hasClass('expanded')) {
                $commentText.removeClass('expanded');
                $fade.show();
                $icon.removeClass('fa-chevron-up').addClass('fa-chevron-down');
                $text.text('Devamını Oku');
            } else {
                $commentText.addClass('expanded');
                $fade.hide();
                $icon.removeClass('fa-chevron-down').addClass('fa-chevron-up');
                $text.text('Daha Az Göster');
            }
        });

        // Yorum kartı tıklama efekti
        $('.comment-card').click(function(e) {
            // Butonlara tıklanmadıysa efekti uygula
            if (!$(e.target).closest('.btn-action').length && !$(e.target).closest('.read-more-btn').length) {
                $(this).toggleClass('selected');
            }
        });

        // Status badge'lere tıklayınca filtreleme
        $('.stats-badge').click(function() {
            // Tıklanan badge'i vurgula
            $('.stats-badge').css({
                'transform': 'translateY(0)',
                'box-shadow': '0 4px 15px rgba(0,0,0,0.1)'
            });
            $(this).css({
                'transform': 'translateY(-3px)',
                'box-shadow': '0 8px 25px rgba(0,0,0,0.2)'
            });
        });

        // Uzun yorumları otomatik kısalt
        $('.comment-text').each(function() {
            var text = $(this).text();
            if (text.length > 200 && !$(this).hasClass('expanded')) {
                var shortText = text.substring(0, 200) + '...';
                $(this).text(shortText);
            }
        });

        // Silme işlemi öncesi onay
        $(document).on('click', '.btn-remove', function(e) {
            var authorName = $(this).closest('.comment-card').find('.comment-author').text().trim();
            if (!confirm(authorName + ' tarafından yapılan yorumu yayından kaldırmak istediğinize emin misiniz?')) {
                e.preventDefault();
                return false;
            }
        });

        // Yorum durumuna göre renklendirme
        $('.comment-card').each(function() {
            var isActive = $(this).find('.comment-status').text().includes('Aktif');
            if (!isActive) {
                $(this).css({
                    'opacity': '0.8',
                    'background': '#f8f9fa'
                });
                $(this).find('.comment-header').css({
                    'background': '#e9ecef'
                });
            }
        });
    });
</script>