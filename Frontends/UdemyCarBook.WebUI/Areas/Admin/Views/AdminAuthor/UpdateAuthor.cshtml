@model UpdateAuthorDto
@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title font-size-18">Yazar Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Yazarlar bölümünden seçilen yazarın bilgilerinin güncelleme işlemleri bu sayfa üzerinden gerçekleştirebilirsiniz.  İlgili alanları eksiksiz  doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                        <br />
                        <form method="post">
                            <input type="hidden" asp-for="AuthorID"/>
                            <div class="form-group">
                                <label>Ad Soyad</label>
                                <input type="text" class="form-control" asp-for="@Model.Name">
                            </div>

                            <div class="form-group">
                                <label>Açıklama</label>
                                <textarea rows="5" class="form-control" asp-for="@Model.Description"></textarea>
                            </div>

                            <div class="form-group">
                                <label>Görsel Link</label>
                                <input type="text" class="form-control" asp-for="@Model.ImageUrl">
                            </div>


                            <button type="submit" class="btn btn-success waves-effect waves-light">Yazarı Güncelle</button>
                            <a href="/Admin/AdminAuthor" class="btn btn-danger waves-effect waves-light"> Yazarlar Listesine Dön </a>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




