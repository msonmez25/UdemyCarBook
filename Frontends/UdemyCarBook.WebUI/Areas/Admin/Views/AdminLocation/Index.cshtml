@model List<ResultLocationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int sayac = 0;
}


<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title font-size-18">Lokasyon Bilgileri Alanı</h4>
                        <p class="card-subtitle mb-4">
                           Ana sayfa ve araç kiralama sayfasında yer alan araçların alındığı ve bırakıldığı noktaları temsil eden lokasyon kısmıdır. Araç kiralama noktalarına ait lokasyon bilgilerinin isimleri yer almaktadır. Lokasyon girişi ve güncellemesi yaparken bilgileri eksiksiz girmeye özen gösteriniz.
                        </p>
                        <br />
                        <table id="tbl1" class="table  nowrap">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Lokasyon Adı</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                    <th>Konumu Aç</th>
                                </tr>
                            </thead>


                            <tbody>
                                @foreach (var item in Model)
                                {
                                    sayac++;
                                    <tr>
                                        <td>@sayac</td>
                                        <td>@item.Name</td>

                                        <td>
                                            <a href="/Admin/AdminLocation/RemoveLocation/@item.LocationID" class="btn btn-danger waves-effect waves-light"> Sil </a>
                                        </td>

                                        <td>
                                            <a href="/Admin/AdminLocation/UpdateLocation/@item.LocationID" class="btn btn-success waves-effect waves-light"> Güncelle </a>
                                        </td>

                                        <td>
                                            <a href="/Admin/AdminLocation/DetailLocation" class="btn btn-warning waves-effect waves-light"> Haritada Gör </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <br />
                        <a href="/Admin/AdminLocation/CreateLocation/" class="btn btn-primary waves-effect waves-light"> Yeni Lokasyon Girişi </a>


                    </div> <!-- end card body-->
                </div> <!-- end card -->
            </div><!-- end col-->
        </div>

    </div> <!-- container-fluid -->
</div>


