@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title font-size-18">Hakkımızda Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Ana sayfada bulunan Hakkımızda bölümünündeki bir kayıdın güncelleme işlemlerini bu sayfa üzerinden gerçekleştirebilirsiniz.  İlgili alanları eksiksiz  doldurmanız önemlidir.  Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                        <br />
                        <form method="post">
                            <input type="hidden" asp-for="@Model.aboutID" />
                            <div class="form-group">
                                <label>Başlık</label>
                                <input type="text" class="form-control" asp-for="@Model.title">
                            </div>

                            <div class="form-group">
                                <label>Açıklama</label>
                                <textarea rows="5" class="form-control" asp-for="@Model.description"></textarea>                                
                            </div>

                            <div class="form-group">
                                <label>Kapak Görsel Link</label>
                                <input type="text" class="form-control" asp-for="@Model.imageUrl">
                            </div>

                            

                            <button type="submit" class="btn btn-success waves-effect waves-light">Hakkımızda Güncelle</button>
                            <a href="/Admin/AdminAbout" class="btn btn-danger waves-effect waves-light"> Hakkımızda Listesine Dön </a>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




