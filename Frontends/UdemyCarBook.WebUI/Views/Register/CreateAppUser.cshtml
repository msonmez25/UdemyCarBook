    <title>CarBook - Yeni Kayıt</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8">

    <!-- Mevcut asset'ler korunuyor -->
    <link type="text/css" rel="stylesheet" href="~/loginRegister/assets/css/bootstrap.min.css">
    <link rel="shortcut icon" href="~/Admin/vertical/assets/images/storyfire.ico" type="image/x-icon">

    <!-- Google Fonts + Bootstrap Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        :root {
            --green: #00d4aa; /* Ana tema yeşili */
            --orange: #ff6b35; /* Premium turuncu */
            --orange-light: #ff8c42;
            --dark: #1a1a1a;
            --light: #ffffff;
            --gray: #94a3b8;
        }

        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Inter', sans-serif;
            background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.5)), url('https://images.unsplash.com/photo-1494905998402-395d579af36f?w=1920') center/cover no-repeat fixed;
        }

        a {
            text-decoration: none !important;
        }

        .login-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .login-card {
            max-width: 460px;
            width: 100%;
            background: var(--light);
            border-radius: 28px;
            overflow: hidden;
            box-shadow: 0 15px 40px rgba(0,0,0,0.25);
            position: relative;
            transition: all 0.45s cubic-bezier(0.25, 0.8, 0.25, 1); /* Yumuşak geçiş */
            border: 3px solid transparent;
        }

        /* Normal hal: sade gölge */
        .login-card {
            box-shadow: 0 15px 40px rgba(0,0,0,0.25);
        }

            /* HOVER: Premium shadow patlaması */
            .login-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 12px 35px rgba(255,140,0,0.35);
                border-color: #ff9800;
            }

                /* Ekstra: hover’da kartın kendisi de hafif parlasın */
                .login-card:hover::after {
                    content: '';
                    position: absolute;
                    top: 0;
                    left: 0;
                    right: 0;
                    bottom: 0;
                    border-radius: 28px;
                    background: linear-gradient(135deg, rgba(0, 212, 170, 0.08) 0%, rgba(255, 107, 53, 0.08) 100%);
                    pointer-events: none;
                    opacity: 0;
                    animation: shine 0.8s ease-out forwards;
                }

        @@keyframes shine {
            0% {
                opacity: 0;
                transform: scale(0.9);
            }

            60% {
                opacity: 1;
            }

            100% {
                opacity: 0;
                transform: scale(1.05);
            }
        }

        .brand-header {
            background: linear-gradient(135deg, #000000 0%, #111111 100%);
            padding: 40px 30px;
            text-align: center;
            color: white;
        }

            .brand-header h1 {
                font-size: 2.8rem;
                font-weight: 800;
                margin: 0;
                background: linear-gradient(90deg, #00d4aa, #00e6b8);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
            }

            .brand-header p {
                margin: 12px 0 0;
                opacity: 0.9;
                font-size: 1.05rem;
            }

        .form-area {
            padding: 50px 45px 45px;
        }

        .form-title {
            text-align: center;
            font-size: 1.9rem;
            font-weight: 700;
            color: var(--dark);
            margin-bottom: 35px;
        }

        .input-wrapper {
            position: relative;
            margin-bottom: 22px;
        }

        .input-text {
            height: 60px;
            border-radius: 16px;
            border: 2px solid #e2e6f0;
            padding: 0 20px 0 62px;
            font-size: 1.05rem;
            width: 100%;
            transition: all 0.3s ease;
        }

            .input-text:focus {
                border-color: var(--green);
                box-shadow: 0 0 0 4px rgba(0, 212, 170, 0.15);
                outline: none;
            }

        .input-wrapper i {
            position: absolute;
            left: 22px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.4rem;
            color: var(--green);
        }

        .btn-register {
            height: 60px;
            border-radius: 16px;
            background: var(--green);
            color: white;
            font-size: 1.15rem;
            font-weight: 600;
            border: none;
            transition: all 0.3s ease;
            box-shadow: 0 8px 25px rgba(0, 212, 170, 0.3);
        }

            .btn-register:hover {
                background: #00b894;
                transform: translateY(-3px);
                box-shadow: 0 15px 35px rgba(0, 212, 170, 0.4);
            }

        .login-text {
            text-align: center;
            margin-top: 25px;
            color: #666;
        }

            .login-text a {
                color: var(--green);
                font-weight: 600;
                text-decoration: none;
            }

                .login-text a:hover {
                    text-decoration: underline;
                }

        @@media (max-width: 576px) {
            .login-card

        {
            max-width: 380px;
            border-radius: 24px;
        }

        .form-area {
            padding: 40px 30px;
        }

        .brand-header h1 {
            font-size: 2.4rem;
        }

        }
    </style>
</head>
<body>
    <!-- Google Tag Manager (noscript) -->
    <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TAGCODE"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>

    <div class="login-container">
        <div class="login-card">
            <!-- Üst Logo Alanı -->
            <div class="brand-header">
                <a href="/Default/Index/"><h1>CARBOOK</h1></a>
                <p>Hayalindeki Aracı Kirala</p>
            </div>

            <!-- Kayıt Formu -->
            <div class="form-area">
                <h3 class="form-title">Yeni Kayıt Sayfası</h3>

                <form asp-action="CreateAppUser" asp-controller="Register" method="post">
                    <div class="input-wrapper">
                        <i class="bi bi-envelope"></i>
                        <input type="email" asp-for="Mail" class="input-text" placeholder="Mail Adresinizi Giriniz" required>
                    </div>

                    <div class="input-wrapper">
                        <i class="bi bi-person"></i>
                        <input type="text" asp-for="Username" class="input-text" placeholder="Kullanıcı Adınız Giriniz" required>
                    </div>

                    <div class="input-wrapper">
                        <i class="bi bi-lock"></i>
                        <input type="password" asp-for="Password" class="input-text" placeholder="Şifrenizi Giriniz" required>
                    </div>

                    <button type="submit" class="btn btn-register w-100">Hesabı Oluştur</button>

                    <p class="login-text">
                        Zaten bir hesabın var mı? <a asp-action="Index" asp-controller="Login">Giriş Yap</a>
                    </p>
                </form>
            </div>
        </div>
    </div>

    <!-- Mevcut JS'ler -->
    <script src="~/loginRegister/assets/js/jquery-2.2.0.min.js"></script>
    <script src="~/loginRegister/assets/js/popper.min.js"></script>
    <script src="~/loginRegister/assets/js/bootstrap.min.js"></script>
</body>
</html>