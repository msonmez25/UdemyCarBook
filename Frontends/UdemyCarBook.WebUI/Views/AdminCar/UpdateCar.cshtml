@model UpdateCarDto
@{
    ViewData["Title"] = "UpdateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title font-size-18">Araç Bilgisi Güncelleme</h4>
                        <p class="card-subtitle mb-4">Sistemde var olan arac bilgilerini güncellerken ilgili alanları eksiksiz  doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak güncelleme işlemini tamamlayabilirsiniz.</p>
                        <br />
                        <form method="post">
                            <input type="hidden" asp-for="CarID" />
                            <div class="form-group">
                                <label>Marka</label>
                                @Html.DropDownListFor(x => x.BrandID, (List<SelectListItem>)ViewBag.BrandValues, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label>Model</label>
                                <input type="text" class="form-control" asp-for="@Model.Model">
                            </div>

                            <div class="form-group">
                                <label>Kapak Fotoğrafı</label>
                                <input type="text" class="form-control" asp-for="@Model.CoverImageUrl">
                            </div>

                            <div class="form-group">
                                <label>Büyük Resim</label>
                                <input type="text" class="form-control" asp-for="@Model.BigImageUrl">
                            </div>

                            <div class="form-group">
                                <label>KM</label>
                                <input type="text" class="form-control" asp-for="@Model.Km">
                            </div>

                            <div class="form-group">
                                <label>Yıl</label>
                                <input type="text" class="form-control" asp-for="@Model.Year">
                            </div>

                            <div class="form-group">
                                <label>Vites</label>
                                @Html.DropDownListFor(x => x.VitesID, (List<SelectListItem>)ViewBag.VitesValues, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label>Yakıt Türü</label>
                                @Html.DropDownListFor(x => x.YakitTuruID, (List<SelectListItem>)ViewBag.YakitTuruValues, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label>Koltuk Sayısı</label>
                                <input type="number" class="form-control" asp-for="@Model.Seat">
                            </div>

                            <div class="form-group">
                                <label>Bagaj Sayısı</label>
                                <input type="number" class="form-control" asp-for="@Model.Luggage">
                            </div>

                            <button type="submit" class="btn btn-success waves-effect waves-light">Aracı Kaydet</button>
                            <a href="/AdminCar/Index/" class="btn btn-danger waves-effect waves-light"> Araç Listesine Dön </a>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




