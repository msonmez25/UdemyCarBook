
<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Bir yorum yapın</h3>
    <form method="post" asp-action="AddComment" asp-controller="Blog" class="p-5 bg-light">

        <input name="BlogID" value="@ViewBag.Blogid" type="hidden" />

        <div class="form-group">
            <label for="name">Adınız Soyadınız</label>
            <input name="Name" type="text" class="form-control" required>
        </div>

        <div class="form-group">
            <label for="email">Mail Adreiniz</label>
            <input name="Email" type="email" class="form-control" required>
        </div>             

        <div class="form-group">
            <label for="message">Yorumunuz</label>
            <textarea name="Description" required cols="30" rows="7" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <input type="submit" value="Yorum Yap" class="btn py-3 px-4 btn-primary">
        </div>

    </form>
</div>