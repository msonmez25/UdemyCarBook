@model List<DetailCommentDto>


<h3 class="mb-5">@ViewBag.CountCommentByBlogId Yorum</h3>
<ul class="comment-list">
    @foreach(var item in Model)
    {
        <li class="comment">
            <div class="vcard bio">
                <img src="https://w7.pngwing.com/pngs/831/88/png-transparent-user-profile-computer-icons-user-interface-mystique-miscellaneous-user-interface-design-smile-thumbnail.png" alt="Image placeholder">
            </div>
            <div class="comment-body">
                <h3>@item.Name</h3>
                <div class="meta">@(((DateTime)item.CreatedDate).ToString("dd.MMMMMMM.yyyy HH:mm"))</div>
                <p>@item.Description</p>
            </div>
        </li>
    }  
</ul>