@* @model List<ResultLast5CarsWithBrandsDto> *@
@model List<GetCarPricingWithDailyPeriodDto>

<style>
    /* KART GENEL TASARIMI */
    .car-wrap {
        background: #ffffff;
        border-radius: 16px !important;
        overflow: hidden;
        box-shadow: 0 6px 25px rgba(0,0,0,0.10);
        transition: .3s ease;
        border: 2px solid transparent;
    }

        /* KART HOVER */
        .car-wrap:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 35px rgba(255,140,0,0.35);
            border-color: #ff9800;
        }

        /* ARAÇ FOTOĞRAFI */
        .car-wrap .img {
            height: 220px;
            background-size: cover !important;
            background-position: center !important;
            border-bottom: 3px solid #ff9800;
            box-shadow: inset 0 -30px 40px rgba(0,0,0,0.25);
            transition: .3s;
        }

        /* HOVER – RESİM EFEKTİ */
        .car-wrap:hover .img {
            filter: brightness(1.12) contrast(1.05);
        }

        /* MODEL BAŞLIK */
        .car-wrap .text h2 a {
            color: #333;
            font-weight: 800;
            font-size: 22px;
            text-transform: uppercase;
            letter-spacing: .5px;
        }

        /* MARKA (KATEGORİ) */
        .car-wrap .text .cat {
            background: linear-gradient(135deg, #00e5ff, #0091ea);
            color: #00344b !important;
            padding: 4px 10px;
            border-radius: 8px;
            font-size: 13px;
            font-weight: bold !important;
        }

        /* FİYAT */
        .car-wrap .text .price {
            font-size: 20px;
            font-weight: 800;
            color: #e65100;
            text-shadow: 0 0 3px rgba(255,140,0,0.4);
        }

            .car-wrap .text .price span {
                font-size: 13px;
                color: #444;
            }

    /* BUTONLAR */
    .btn-primary {
        background: linear-gradient(135deg, #ff9800, #ff006a) !important;
        border: none;
        box-shadow: 0 4px 10px rgba(255,0,102,0.3);
        transition: .3s;
        font-weight: 600;
        color: #fff !important;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 14px rgba(255,0,102,0.45);
        }

    .btn-secondary {
        background: linear-gradient(135deg, #2196f3, #1976d2) !important;
        border: none;
        box-shadow: 0 4px 10px rgba(25,118,210,0.3);
        transition: .3s;
        font-weight: 600;
        color: #fff !important;
    }

        .btn-secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 14px rgba(33,150,243,0.45);
        }
</style>


<section class="ftco-section ftco-no-pt bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 heading-section text-center ftco-animate mb-5">
                <span class="subheading">Sİzİn İçİn Önerİlerİmİz</span>
                <h2 class="mb-2">Öne Çıkan Araçlarımız</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="carousel-car owl-carousel">
                    @foreach (var item in Model)
                    {
                        <div class="item">
                            <div class="car-wrap rounded ftco-animate">
                                <div class="img rounded d-flex align-items-end" style="background-image: url(@item.CoverImageUrl);">
                                </div>
                                <div class="text">
                                    <h2 class="mb-0"><a href="#">@item.Model</a></h2>
                                    <div class="d-flex mb-3 justify-content-around">
                                       
                                        <span class="cat">@item.Brand</span>
                                        <p class="price ml-auto">@item.Amount₺ <span>/Günlük</span></p>
                                    </div>
                                    <p class="d-flex mb-0 d-block"><a href="/Reservation/Index/@item.CarID" class="btn btn-primary py-2 mr-1">Aracı Kirala</a> <a href="/Car/CarDetail/@item.CarID" class="btn btn-secondary py-2 ml-1">Detaylar</a></p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>