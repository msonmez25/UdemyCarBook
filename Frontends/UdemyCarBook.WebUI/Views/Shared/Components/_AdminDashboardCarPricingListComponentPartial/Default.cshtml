@model List<ResultCarPricingListWithModelDto>

<div class="col-xl-6 mb-4">
    <div class="card border-0 shadow-sm h-100 rounded-4 bg-white overflow-hidden">
        <!-- Başlık + İkon -->
        <div class="card-header bg-transparent border-0 py-4 px-4">
            <div class="d-flex align-items-center">
                <i class="fas fa-tags text-warning fs-4 me-3"></i>
                <div>
                    <h5 class="mb-0 fw-bold text-dark">Araç Kiralama Ücretleri</h5>
                    <small class="text-muted">Günlük • Haftalık • Aylık fiyat karşılaştırması</small>
                </div>
            </div>
        </div>

        <!-- Tablo Alanı -->
        <div class="card-body pt-0 px-4 pb-4">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light-subtle">
                        <tr>
                            <th class="fw-semibold text-dark ps-4">Marka - Model</th>
                            <th class="fw-semibold text-dark text-center">Günlük</th>
                            <th class="fw-semibold text-dark text-center">Haftalık</th>
                            <th class="fw-semibold text-dark text-end pe-4">Aylık</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="border-start border-start-4 border-start-warning hover-lift">
                                <td class="ps-4 fw-medium">
                                    <div class="d-flex align-items-center">
                                        <div class="me-3">
                                            <div class="avatar-sm bg-soft-primary text-primary rounded">
                                                <i class="fas fa-car-side fs-5"></i>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@item.Model</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-success-subtle text-success px-3 py-2 rounded-pill fw-bold">
                                        ₺ @item.DailyAmount
                                    </span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-info-subtle text-info px-3 py-2 rounded-pill fw-bold">
                                        ₺ @item.WeeklyAmount
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    <span class="badge bg-primary-subtle text-primary px-3 py-2 rounded-pill fw-bold">
                                        ₺ @item.MonthlyAmount
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Boşluk yoksa footer ekleyelim (isteğe bağlı) -->
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fs-1 text-muted opacity-25"></i>
                    <p class="text-muted mt-3">Henüz fiyat bilgisi eklenmemiş.</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    /* Satır hover efekti */
    .hover-lift {
        transition: all 0.25s ease;
    }

        .hover-lift:hover {
            background-color: rgba(67, 97, 238, 0.04) !important;
            transform: translateY(-4px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.08);
        }
    /* Avatar yuvarlak kutu */
    .avatar-sm {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    /* Badge'ler daha büyük ve dikkat çekici */
    .badge {
        font-size: 0.9rem !important;
    }
</style>