<script>
    $(document).ready(function () {
        $('#btn1').click(function () {
            swal("Şartlar & Koşullar", "Araba kiralama sürecine dair tüm hizmet koşullarına rezervasyonun fiziki olarak gerçekleştirileceği ofislerimizd yer alan anlaşma dokümalraından ulaşabilirsiniz. Bütün sürecin hasar, ceza, geçişler(HGS,OGS,Köprü,Otoban...) ile ilgili detaylar yer almaktadır. Keyifli yolcularak dileriz.");
        })

        $('#btn2').click(function () {
            swal("Güvenlik", "CarBook web sitemiz AspNet Core teknolojisinde, Sha25 şifreleme yöntemiyle verileri (TC Kimlik No, Mail Adresi, Telefon Numarası v.b.) tamamen şifreli olarak tutulması alt yapısına sahiptir. Sistemimizde JWT doğrulaması yapılmaktadır. Kullanıcılarımızın ödeme yaptıkları kart bilgilerileri sistemde kesinlikle tutulmamaktadır.");
        })

        $('#btn3').click(function () {
            swal("Çerez Politikası", "Sizlere daha iyi hizmet sunabilmek adına taryızı çerezlerini kullanmaktayız.");
        })

        $('#btn4').click(function () {
            swal("Sıkça Sorulan Sorular", "Kullanıcıların uygulama hakkında sorduğu sorular yer almaktadır.");
        })

        $('#btn5').click(function () {
            swal("Ödeme Yöntemleri", "Ödeme işlemleri yanlızca fiziki lokasyonlarımızdaki kiralama ofislerimizde kart ile yapılmaktadır.");
        })

        $('#btn6').click(function () {
            swal("Nasıl Çalışır", "1.Adım  : Aracınızı seçin ve Kayıt Forumunu doldurmak. \n 2.Adım : Mail gelen kutusunu kontrol etmek. \n 2.Adım : Ofisimize gelip, aracınızı almak. ");
        })
    })
</script>

