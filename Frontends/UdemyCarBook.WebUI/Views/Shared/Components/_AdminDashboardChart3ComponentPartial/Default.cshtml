<div class="col-lg-4">
    <div class="card border-0 shadow-sm h-100 rounded-4 bg-white chart-fixed-height d-flex flex-column">
        <!-- Başlık + İkon + Badge -->
        <div class="card-header bg-transparent border-0 py-4 px-4">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <h5 class="mb-0 fw-bold text-dark">Lokasyon Bazlı Araç Dağılımı</h5>
                </div>
                <span class="badge bg-danger-subtle text-danger rounded-pill px-3 py-2">Canlı</span>
            </div>
        </div>

        <!-- Grafik + Alt Bilgi -->
        <div class="card-body pt-3 pb-4 px-4 d-flex flex-column">
            <div class="flex-grow-1 position-relative" style="height: 280px;">
                <canvas id="my3Chart"></canvas>
            </div>

            <!-- Alt Bilgi: Lokasyon ve Müsait Araç Sayısı -->
            <div class="row text-center mt-4 pt-3 border-top">
                <div class="col-6">
                    <div class="p-3 bg-light rounded-3 hover-lift text-center">
                        <h3 class="mb-1 fw-bold text-danger">9</h3>
                        <small class="text-muted fw-medium">Toplam Lokasyon</small>
                    </div>
                </div>
                <div class="col-6">
                    <div class="p-3 bg-light rounded-3 hover-lift text-center">
                        <h3 class="mb-1 fw-bold text-success">10</h3>
                        <small class="text-muted fw-medium">Müsait Araç</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const ctx = document.getElementById('my3Chart').getContext('2d');

        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Sabiha Gökçen', 'Kadıköy', 'Kartal', 'İstanbul H.L.', 'Maltepe', 'Bahçelievler', 'Çorlu'],
                datasets: [{
                    label: 'Araç Sayısı',
                    data: [16, 5, 4, 13, 5, 3, 2],
                    backgroundColor: [
                        '#e74a3b', '#f39c12', '#f1c40f', '#27ae60', '#8e44ad', '#2980b9', '#c0392b'
                    ],
                    borderRadius: 8,
                    borderSkipped: false,
                    barThickness: 20,
                    maxBarThickness: 28
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        backgroundColor: 'rgba(0,0,0,0.85)',
                        cornerRadius: 10,
                        padding: 12,
                        callbacks: {
                            label: function(context) {
                                return context.parsed.y + ' araç';
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { color: 'rgba(0,0,0,0.05)' },
                        ticks: { stepSize: 5, color: '#666' }
                    },
                    x: {
                        grid: { display: false },
                        ticks: {
                            color: '#666',
                            maxRotation: 45,
                            minRotation: 45,
                            font: { size: 11 }
                        }
                    }
                },
                animation: {
                    duration: 1200,
                    easing: 'easeOutQuart'
                }
            }
        });
    });
</script>

