@model List<ResultCarPricingListWithModelDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}


<style>
    /* TABLO KART GÖRÜNÜMÜ */
    .car-list table {
        border-radius: 16px;
        overflow: hidden;
        background: #ffffff;
        box-shadow: 0 8px 30px rgba(0,0,0,0.18);
    }

    /* BAŞLIK RENKLERİ — CANLI NEON GRADIENTLER */
    .bg-primary.heading {
        background: linear-gradient(135deg, #ff9800, #ff5722) !important; /* Turuncu -> Kırmızı */
        color: #fff !important;
        font-weight: bold;
    }

    .bg-dark.heading {
        background: linear-gradient(135deg, #673ab7, #512da8) !important; /* Mor */
        color: #fff !important;
        font-weight: bold;
    }

    .bg-black.heading {
        background: linear-gradient(135deg, #2196f3, #1976d2) !important; /* Canlı Mavi */
        color: #fff !important;
        font-weight: bold;
    }

    /* ARAÇ FOTOĞRAFI */
    .car-image .img {
        border-radius: 14px;
        background-size: cover;
        background-position: center;
        width: 190px;
        height: 120px;
        box-shadow: 0 6px 15px rgba(0,0,0,.20);
        border: 2px solid #ff9800;
    }

    /* SATIR HOVER — CANLI IŞIK ETKİSİ */
    .car-list table tbody tr {
        transition: .25s;
    }

        .car-list table tbody tr:hover {
            background: #fff6e8;
            transform: scale(1.015);
            box-shadow: inset 0 0 12px rgba(255,152,0,.45);
        }

    /* KİRALAMA BUTONU — TURUNCU-PINK CANLI GRADIENT */
    .btn-custom a {
        background: linear-gradient(135deg, #ff9800, #ff006a);
        color: #fff !important;
        padding: 10px 16px;
        border-radius: 12px;
        display: inline-block;
        font-weight: 700;
        letter-spacing: .4px;
        transition: .3s;
        box-shadow: 0 3px 10px rgba(255,0,102,0.3);
    }

        .btn-custom a:hover {
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 8px 18px rgba(255,0,102,0.45);
        }

    /* FİYATLAR — PARLAK ETKİ */
    .price-rate .num {
        font-size: 26px;
        font-weight: 800;
        color: #e65100; /* Parlak Turuncu */
        text-shadow: 0 0 2px rgba(255,136,0,0.45);
    }

    .price-rate .currency {
        font-size: 16px;
        color: #ff6f00;
        font-weight: bold;
    }

    .price-rate .per {
        font-size: 14px;
        color: #424242;
        font-weight: 500;
    }

    /* PUAN YILDIZLARI – ALTIN RENK */
    .rated span {
        color: #ffb300;
        font-size: 20px;
        text-shadow: 0 0 4px rgba(255,179,0,0.5);
    }
</style>





<section class="ftco-section ftco-cart">
	<div class="container">
		<div class="row">
			<div class="col-md-12 ftco-animate">
				<div class="car-list">
					<table class="table">
						<thead class="thead-primary">
							<tr class="text-center">
								<th>&nbsp;</th>
								<th>&nbsp;</th>
								<th class="bg-primary heading">Günlük Kiralama Ücreti</th>
								<th class="bg-dark heading">Haftalık Kiralama Ücreti</th>
								<th class="bg-black heading">Aylık Kiralama Ücreti</th>
							</tr>
						</thead>
						@foreach (var item in Model)
						{						
						
						<tbody>
							
							<tr class="">
								<td class="car-image"><div class="img" style="background-image:url(@item.CoverImageUrl);"></div></td>
								<td class="product-name">
									<h3>@item.Model</h3>
									<p class="mb-0 rated">
										<span>Puan: </span>
											
											@for(int x = 0; x <= int.Parse(item.CarScore); x++)
											{
												<span class="ion-ios-star"></span>
											}
									</p>
								</td>

								<td class="price">
										<p class="btn-custom"><a href="/Reservation/Index/@item.CarID">Bu Aracı Kiralayın</a></p>
									<div class="price-rate">
										<h3>
											<span class="num"><small class="currency">₺</small> @item.DailyAmount</span>
											<span class="per">/Günlük Fiyat</span>
										</h3>
										
									</div>
								</td>

								<td class="price">
										<p class="btn-custom"><a href="/Reservation/Index/@item.CarID">Bu Aracı Kiralayın</a></p>
									<div class="price-rate">
										<h3>
												<span class="num"><small class="currency">₺</small> @item.WeeklyAmount</span>
												<span class="per">/Haftalık Fiyat</span>
										</h3>
									</div>
								</td>

								<td class="price">
										<p class="btn-custom"><a href="/Reservation/Index/@item.CarID">Bu Aracı Kiralayın</a></p>
									<div class="price-rate">
										<h3>
												<span class="num"><small class="currency">₺</small> @item.MonthlyAmount</span>
												<span class="per">/Aylık Fiyat</span>
										</h3>
									</div>
								</td>
							</tr><!-- END TR-->

						
						</tbody>

						}
					</table>
				</div>
			</div>
		</div>
	</div>
</section>

