@model ResultLocationDto
@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_HeadUILayoutComponentPartial")

<style>

    #drop option {
        background: #1089FF !important;
        color: white;
        font-size:15px
    }
    /* ===============================
       KİRALAMA BÖLÜMÜ – KART DİLİ
    ================================ */

    /* SOL FORM KART */
    .request-form {
        background: #ffffff;
        border-radius: 16px;
        padding: 30px 28px;
        box-shadow: 0 6px 25px rgba(0,0,0,0.10);
        border: 2px solid transparent;
        transition: .3s ease;
    }

        .request-form:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 35px rgba(255,140,0,0.35);
            border-color: #ff9800;
        }

        /* FORM BAŞLIK */
        .request-form h2 {
            font-size: 22px;
            font-weight: 800;
            text-align: center;
            margin-bottom: 25px;
            color: #333;
            text-transform: uppercase;
            letter-spacing: .5px;
        }

        /* LABEL */
        .request-form .label {
            font-size: 13px;
            font-weight: 700;
            color: #555;
            margin-bottom: 6px;
        }

        /* INPUT & SELECT */
        .request-form .form-control {
            height: 48px;
            border-radius: 10px;
            border: 1px solid #ddd;
            padding: 10px 14px;
            font-size: 14px;
            transition: .3s;
        }

            .request-form .form-control:focus {
                border-color: #ff9800;
                box-shadow: 0 0 0 3px rgba(255,152,0,0.25);
                outline: none;
            }

    /* SELECT OPTION */
    #drop option {
        background: #2196f3;
        color: #fff;
    }

    /* TARİH ALANLARI */
    .request-form .d-flex .form-group {
        width: 50%;
    }

    /* GÖNDER BUTONU */
    .request-form .btn-secondary {
        width: 100%;
        margin-top: 10px;
    }

    /* ===============================
       SAĞ TARAF – BİLGİ KARTI
    ================================ */

    .services-wrap {
        background: #ffffff;
        border-radius: 16px;
        padding: 40px 35px;
        box-shadow: 0 6px 25px rgba(0,0,0,0.10);
        transition: .3s ease;
    }

        .services-wrap:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 35px rgba(255,140,0,0.25);
        }

        /* BAŞLIK */
        .services-wrap .heading-section {
            font-size: 26px;
            font-weight: 800;
            text-align: center;
            margin-bottom: 40px;
            color: #333;
        }

    /* SERVİS KARTLARI */
    .services {
        background: #f9f9f9;
        border-radius: 16px;
        padding: 30px 20px;
        transition: .3s ease;
        border: 2px solid transparent;
    }

        .services:hover {
            border-color: #ff9800;
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(255,140,0,0.25);
        }

        /* SERVİS ICON */
        .services .icon {
            width: 70px;
            height: 70px;
            margin: 0 auto 18px;
            border-radius: 50%;
            background: linear-gradient(135deg, #00e5ff, #0091ea);
            box-shadow: 0 4px 12px rgba(0,145,234,0.35);
        }

            .services .icon span {
                font-size: 32px;
                color: #fff;
            }

        /* SERVİS BAŞLIK */
        .services h3 {
            font-size: 16px;
            font-weight: 700;
            color: #333;
        }

    /* ALT BUTON */
    .services-wrap .btn-primary {
        border-radius: 30px;
        padding: 14px 36px;
        font-size: 15px;
    }


</style>

<body>



    @await Component.InvokeAsync("_NavbarUILayoutComponentPartial")
    <!-- END nav -->
    @await Component.InvokeAsync("_DefaultCoverUILayoutComponentPartial")
    
    <!--Kiralama bölümü start-->
    <section class="ftco-section ftco-no-pt bg-light">
        <div class="container">
            <div class="row no-gutters">
                <div class="col-md-12	featured-top">
                    <div class="row no-gutters">
                        <div class="col-md-4 d-flex align-items-center">
                            <form method="post" class="request-form ftco-animate bg-primary">
                                <h2>Şİmdİ Aracınızı Kİralayın</h2>
                                <div class="form-group">
                                    <label for="" class="label">Alınacak Lokasyon</label>
                                    @Html.DropDownListFor(x => x.LocationID, (List<SelectListItem>)ViewBag.LocationValues, new { @class = "form-control", @id = "drop", name = "locationID" })
                                </div>

                                <div class="d-flex">
                                    <div class="form-group mr-2">
                                        <label for="" class="label">Alış Tarİhİ</label>
                                        <input type="text" class="form-control" name="book_pick_date" id="book_pick_date" placeholder="Tarih Seçiniz">
                                    </div>
                                    <div class="form-group ml-2">
                                        <label for="" class="label">İade Tarİhİ</label>
                                        <input type="text" class="form-control" name="book_off_date" id="book_off_date" placeholder="Tarih Seçiniz">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="" class="label">Alış Saati</label>
                                    <input type="text" class="form-control" name="time_pick" id="time_pick" placeholder="Saat Seçiniz">
                                </div>
                                <div class="form-group">
                                    <label for="" class="label">İade Saati</label>
                                    <input type="text" class="form-control" name="time_off" id="time_off" placeholder="Saat Seçiniz">
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-secondary py-3 px-4"> Uygun Araçları Listele </button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-8 d-flex align-items-center">
                            <div class="services-wrap rounded-right w-100">
                                <h3 class="heading-section mb-4">Araç Kiralamanın En Basit Yolu</h3>
                                <div class="row d-flex mb-4">
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-route"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">Almak İstediğin Konumu Seç</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-handshake"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">En Uygun Araçları Gör</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-rent"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">Kiralamayı Tamamla, Hepsi Bu!</h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <p style="text-align:center" class="mt-5"><a href="/CarPricing/Index/" class="btn btn-primary py-3 px-4">Araç Fiyat Listemizi Görün</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>
    <!--Kiralama bölümü end-->
    
    @await Component.InvokeAsync("_DefaultLast5CarsWithBrandsComponentPartial")

    @await Component.InvokeAsync("_AboutUsComponentPartial")

    @await Component.InvokeAsync("_ServiceComponentPartial")

    @await Component.InvokeAsync("_BecomeADriverComponentPartial")

    @await Component.InvokeAsync("_TestimonialComponentPartial")

    @await Component.InvokeAsync("_GetLast3BlogsWithAuthorListComponentPartial")

    @await Component.InvokeAsync("_DefaultStatisticsUILayoutComponentPartial")

   

    @await Component.InvokeAsync("_FooterUILayoutComponentPartial")

    @await Component.InvokeAsync("_ScriptUILayoutComponentPartial")

</body>
</html>

